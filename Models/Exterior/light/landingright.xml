<?xml version="1.0"?>

<!-- 
     The external lights must :
     - be centered at the model origin, where the billboard rotation happen (also required by scaling).
     - have the surface vertical, oriented to the left of aircraft (otherwise billboard makes
     the object disappear !).


     Animation :
     - translation must happen before the billboard.
     - unit (meter) is the same than Blender (add 0.2 in length to the landing light cone).
     - white material makes them visible at night.
     - scaling makes them more visible at night.


     Credits
     =======
     Light texture from bo105 (M. Franz).

-->
 
<PropertyList>
  <path>procedural_light.ac</path>

    <effect>
        <inherits-from>procedural-light-nav</inherits-from>
        <object-name>procedural_light</object-name>
    </effect>


 <animation>
  <type>noshadow</type>
  <object-name>procedural_light</object-name>
 </animation>

 <animation>
  <type>select</type>
  <object-name>procedural_light</object-name>
  <condition>
   <and include="../../../Panels/Instruments/concorde-cond-voltage-light.xml">
    <greater-than-equals>
     <property>controls/lighting/external/main-landing[1]/norm</property>
     <property n="1">/controls/lighting/external/interpolate/on</property>
    </greater-than-equals>
    <property>controls/lighting/external/main-landing[1]/on</property>
   </and>
  </condition>
 </animation>

 <animation>
  <type>material</type>
  <object-name>procedural_light</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>instrumentation/generic/factor</factor-prop>
  </emission> 
 </animation>

 <animation>
  <type>translate</type>
  <object-name>procedural_light</object-name>
  <offset-m>-10.856</offset-m>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>procedural_light</object-name>
  <offset-m>1.553</offset-m>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>procedural_light</object-name>
  <offset-m>-0.272</offset-m>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>procedural_light</object-name>
  <property>controls/lighting/external/main-landing[1]/norm</property>
  <interpolation>
   <entry>
     <ind>0.0</ind>
     <dep>0.0</dep>
   </entry>
   <entry>
     <ind>1.0</ind>
     <dep>0.0</dep>
   </entry>
   <entry>
     <ind>1.2</ind>
     <dep>-10.0</dep>
   </entry>
  </interpolation>   
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>



 <animation>
  <type>dist-scale</type>
  <object-name>procedural_light</object-name>
  <condition>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.57</value>
   </greater-than>
  </condition>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>1</dep>
   </entry>
   <entry>
    <ind>20</ind>
    <dep>1</dep>
   </entry>
   <entry>
    <ind>1500</ind>
    <dep>3</dep>
   </entry>
  </interpolation>
 </animation>

</PropertyList>
