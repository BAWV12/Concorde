    <animation>
        <type>pick</type>
        <object-name>ND.screen</object-name>
        <action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>canvas_nd.showNd();</script>
			</binding>
        </action>
    </animation>
	
	<!-- ND left dimmer -->
	<animation>
		<type>material</type>
		<object-name>ND.screen</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>/controls/lighting/ndl-norm</factor-prop>
		</emission>
	</animation>
   
</PropertyList>
