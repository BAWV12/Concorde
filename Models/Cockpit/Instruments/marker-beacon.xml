<?xml version="1.0"?>
<PropertyList>
  <path>../Models/marker-beacon.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>InnerMarker</object-name>
    <condition>
     <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
      <or>
        <property>/instrumentation/marker-beacon/test-inner</property>
        <property>/instrumentation/marker-beacon/inner</property>
      </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>MiddleMarker</object-name>
    <condition>
     <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
      <or>
        <property>/instrumentation/marker-beacon/test-middle</property>
        <property>/instrumentation/marker-beacon/middle</property>
      </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>OuterMarker</object-name>
    <condition>
     <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
      <or>
        <property>/instrumentation/marker-beacon/test-outer</property>
        <property>/instrumentation/marker-beacon/outer</property>
      </or>
     </and>
    </condition>
    <emission>
      <red>0</red>
      <green>0</green>
      <blue>0.8</blue>
    </emission>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>Test</object-name>
    <action>
      <name>Test Marker</name>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>globals.Concorde.markerinstrument.testexport();</script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/generic/click</property>
      </binding>
    </action>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <object-name>Test</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
