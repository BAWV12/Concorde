<?xml version="1.0"?>
<PropertyList>
  <path>../Models/ins-warning-lights.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
    <object-name>INS1</object-name>
    <object-name>INS2</object-name>
    <object-name>INS3</object-name>
    <object-name>INSComp</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>INS1</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[0]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>INS2</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[1]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>INS3</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[3]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>INSComp</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[0]/light/warning</property>
          <property>/instrumentation/ins[1]/light/warning</property>
          <property>/instrumentation/ins[2]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0</blue>
    </emission>
  </animation>

  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
