<?xml version="1.0"?>
<PropertyList>
  <path>../Models/ins-warning-lights.ac</path>
  <animation>
    <type>material</type>
    <object-name>INS1</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[0]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>INS2</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[1]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>INS3</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[3]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>INSComp</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <property>/instrumentation/ins[0]/light/warning</property>
          <property>/instrumentation/ins[1]/light/warning</property>
          <property>/instrumentation/ins[2]/light/warning</property>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0</blue>
    </emission>
  </animation>

  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
      <factor-prop>systems/lighting/level/panel/main</factor-prop>
  </emission>
 </animation>
</PropertyList>
