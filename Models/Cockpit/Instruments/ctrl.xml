<?xml version="1.0"?>
<PropertyList>
  <path>../Models/ctrl.ac</path>
  <params>
    <elev>/controls/flight/elevator</elev>
    <aileron>/controls/flight/aileron</aileron>
    <rudder>/controls/flight/rudder</rudder>
  </params>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>translate</type>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <object-name>B3</object-name>
    <object-name>B4</object-name>
    <property alias="/params/elev"/>
    <interpolation>
      <entry>
        <ind>1</ind>
        <dep>.022</dep>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>-1</ind>
        <dep>-.022</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>translate</type>
    <object-name>B1</object-name>
    <property alias="/params/aileron"/>
    <interpolation>
      <entry>
        <ind>1</ind>
        <dep>.022</dep>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>-1</ind>
        <dep>-.022</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>
    <type>translate</type>
    <object-name>B6</object-name>
    <property alias="/params/aileron"/>
    <interpolation>
      <entry>
        <ind>1</ind>
        <dep>.022</dep>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>-1</ind>
        <dep>-.022</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>translate</type>
    <object-name>B2</object-name>
    <property alias="/params/aileron"/>
    <interpolation>
      <entry>
        <ind>1</ind>
        <dep>.011</dep>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>-1</ind>
        <dep>-.011</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>
    <type>translate</type>
    <object-name>B5</object-name>
    <property alias="/params/aileron"/>
    <interpolation>
      <entry>
        <ind>1</ind>
        <dep>.011</dep>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>-1</ind>
        <dep>-.011</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>translate</type>
    <object-name>rudder</object-name>
    <property alias="/params/rudder"/>
    <interpolation>
      <entry>
        <ind>1</ind>
        <dep>.020</dep>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>-1</ind>
        <dep>-.020</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>B1</object-name>
    <object-name>B2</object-name>
    <object-name>B3</object-name>
    <object-name>B4</object-name>
    <object-name>B5</object-name>
    <object-name>B6</object-name>
    <object-name>rudder</object-name>
    <object-name>Frame.001</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <condition>
	<greater-than>
	  <property>systems/lighting/level/roof</property>
	  <value>0</value>
	</greater-than>
  </condition>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
   <factor-prop>systems/lighting/level/roof</factor-prop>
  </emission>
 </animation>

