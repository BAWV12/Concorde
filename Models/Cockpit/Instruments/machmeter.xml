<?xml version="1.0"?>
<PropertyList>
  <path>../Models/machmeter.ac</path>
  <params>
    <serviceable>/instrumentation/mach-indicator[0]/serviceable</serviceable>
    <failure-flag>/instrumentation/mach-indicator[0]/failure-flag</failure-flag>
    <mach-sel>/instrumentation/mach-indicator[0]/indicated-mach</mach-sel>
    <mmo-sel>/instrumentation/mach-indicator[0]/mmo-mach</mmo-sel>
    <min-sel>/instrumentation/mach-indicator[0]/min</min-sel>
    <max-sel>/instrumentation/mach-indicator[0]/max</max-sel>
  </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </condition>    
  </animation>

  <animation>

    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>MachNeedle</object-name>
    <property alias="/params/mach-sel"/>
    <interpolation>
      <entry>
        <ind>.4</ind>
        <dep>-17.5</dep>
      </entry>
      <entry>
        <ind>2.4</ind>
        <dep>270</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>LimitNeedle</object-name>
    <property alias="/params/mmo-sel"/>
    <interpolation>
      <entry>
        <ind>.4</ind>
        <dep>-17.5</dep>
      </entry>
      <entry>
        <ind>2.4</ind>
        <dep>270</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>

    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>AFT</object-name>
    <property alias="/params/min-sel"/>
    <interpolation>
      <entry>
        <ind>.4</ind>
        <dep>-17.5</dep>
      </entry>
      <entry>
        <ind>2.4</ind>
        <dep>270</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>

    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>FWD</object-name>
    <property alias="/params/max-sel"/>
    <interpolation>
      <entry>
        <ind>.4</ind>
        <dep>-17.5</dep>
      </entry>
      <entry>
        <ind>2.4</ind>
        <dep>270</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>

    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>Number1</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <property alias="/params/mach-sel"/>
          </floor>
          <max>
            <prod>
              <difference>
                <property alias="/params/mach-sel"/>
                <value>0.99</value>
                <floor>
                  <property alias="/params/mach-sel"/>
                </floor>
              </difference>
              <value>100</value>
            </prod>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.008777</x-m>
      <y-m>-0.017</y-m>
      <z-m>0.007647</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>Number2</object-name>
    <expression>
      <prod>
        <sum>
          <div>
            <floor>
              <prod>
                <property alias="/params/mach-sel"/>
                <value>10</value>
              </prod>
            </floor>
            <value>10</value>
          </div>
          <max>
            <prod>
              <difference>
                <property alias="/params/mach-sel"/>
                <value>0.09</value>
                <div>
                  <floor>
                    <prod>
                      <property alias="/params/mach-sel"/>
                      <value>10</value>
                    </prod>
                  </floor>
                  <value>10</value>
                </div>
              </difference>
              <value>10</value>
            </prod>
            <value>0</value>
          </max>
        </sum>
        <value>360</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.008777</x-m>
      <y-m>-0.009083</y-m>
      <z-m>0.007647</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>Number3</object-name>
    <property alias="/params/mach-sel"/>
    <factor>3600</factor>
    <center>
      <x-m>-0.007806</x-m>
      <y-m>-0.00409</y-m>
      <z-m>0.007647</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Number1</object-name>
    <object-name>Number2</object-name>
    <object-name>Number3</object-name>
    <object-name>LimitNeedle</object-name>
    <object-name>Guage</object-name>
    <object-name>MachNeedle</object-name>
    <object-name>FWD</object-name>
    <object-name>AFT</object-name>
    <object-name>FF</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>
