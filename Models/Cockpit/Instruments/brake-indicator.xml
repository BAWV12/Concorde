<?xml version="1.0"?>
<PropertyList>
  <path>../Models/brakeindicator.ac</path>
  <animation>
    <type>material</type>
    <object-name>Fail</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

        <less-than>
          <property>/systems/brakes/green-accu-psi</property>
          <value>390</value>
        </less-than>
        <property>/systems/brakes/pedals</property>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>On</object-name>
    <condition>
     <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property>/controls/gear/brake-emergency</property>
        <property>/controls/gear/brake-parking-lever</property>
      </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.01</red>
      <green>0.005</green>
      <blue>0.005</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

</PropertyList>
