<?xml version="1.0"?>
<PropertyList>
  <path>../Models/dme.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Label</object-name>
</effect>

  <!--LEFT SIDE-->
  <animation>
    <object-name>DigitL100</object-name>
    <type>select</type>
    <condition>
      <and>
        <greater-than>
          <property>instrumentation/dme[0]/indicated-distance-nm</property>
          <value>100</value>
        </greater-than>
        <equals>
          <property>instrumentation/dme[0]/in-range</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
  </animation>
  <animation>
    <object-name>DigitL10</object-name>
    <type>select</type>
    <condition>
      <and>
        <greater-than>
          <property>instrumentation/dme[0]/indicated-distance-nm</property>
          <value>10</value>
        </greater-than>
        <equals>
          <property>instrumentation/dme[0]/in-range</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
  </animation>
  <animation>
    <object-name>DigitL1</object-name>
    <type>select</type>
    <condition>
      <equals>
        <property>instrumentation/dme[0]/in-range</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <object-name>DigitLDecimal</object-name>
    <type>select</type>
    <condition>
      <equals>
        <property>instrumentation/dme[0]/in-range</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitL100</object-name>
    <property>instrumentation/dme[0]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>0.001</factor>
    <step>100</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitL10</object-name>
    <property>instrumentation/dme[0]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitL1</object-name>
    <property>instrumentation/dme[0]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitLDecimal</object-name>
    <property>instrumentation/dme[0]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>1</factor>
    <step>.1</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!--RIGHT SIDE-->
  <animation>
    <object-name>DigitR100</object-name>
    <type>select</type>
    <condition>
      <and>
        <greater-than>
          <property>instrumentation/dme[1]/indicated-distance-nm</property>
          <value>100</value>
        </greater-than>
        <equals>
          <property>instrumentation/dme[1]/in-range</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
  </animation>
  <animation>
    <object-name>DigitR10</object-name>
    <type>select</type>
    <condition>
      <and>
        <greater-than>
          <property>instrumentation/dme[1]/indicated-distance-nm</property>
          <value>10</value>
        </greater-than>
        <equals>
          <property>instrumentation/dme[1]/in-range</property>
          <value>true</value>
        </equals>
      </and>
    </condition>
  </animation>
  <animation>
    <object-name>DigitR1</object-name>
    <type>select</type>
    <condition>
      <equals>
        <property>instrumentation/dme[1]/in-range</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <object-name>DigitRDecimal</object-name>
    <type>select</type>
    <condition>
      <equals>
        <property>instrumentation/dme[1]/in-range</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitR100</object-name>
    <property>instrumentation/dme[1]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>0.001</factor>
    <step>100</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitR10</object-name>
    <property>instrumentation/dme[1]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitR1</object-name>
    <property>instrumentation/dme[1]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>DigitRDecimal</object-name>
    <property>instrumentation/dme[1]/indicated-distance-nm</property>
    <bias>0.0001</bias>
    <factor>1</factor>
    <step>.1</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->

  <animation>
    <type>select</type>
    <object-name>DigitL100</object-name>
    <object-name>DigitL10</object-name>
    <object-name>DigitL1</object-name>
    <object-name>DigitLPoint</object-name>
    <object-name>DigitLDecimal</object-name>
    <object-name>DigitR100</object-name>
    <object-name>DigitR10</object-name>
    <object-name>DigitR1</object-name>
    <object-name>DigitRPoint</object-name>
    <object-name>DigitRDecimal</object-name>
  <condition>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </condition>
  </animation>


  <animation>
    <type>material</type>
    <object-name>Label</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
