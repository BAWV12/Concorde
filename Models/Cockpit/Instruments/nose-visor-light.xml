<?xml version="1.0"?>
<PropertyList>
  <path>../Models/nosevisor-light.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>RedLight</object-name>
   <condition>
     <and>
       <greater-than>
         <property>/systems/electrical/outputs/specific</property>
         <value>20.0</value>
       </greater-than>
       <or>
	 <property>/controls/lighting/crew/captain/test</property>	
         <not>
           <or>
             <property>/controls/lighting/crew/captain/test</property>
             <equals>
               <property>/instrumentation/nose-visor/pos-norm</property>
               <property n="1">/sim/flaps/setting[0]</property>
               </equals>
               <equals>
               <property>/instrumentation/nose-visor/pos-norm</property>
               <property n="1">/sim/flaps/setting[1]</property>
             </equals>
             <equals>
               <property>/instrumentation/nose-visor/pos-norm</property>
               <property n="1">/sim/flaps/setting[2]</property>
             </equals>
             <equals>
               <property>/instrumentation/nose-visor/pos-norm</property>
               <property n="1">/sim/flaps/setting[3]</property>
             </equals>
           </or>
         </not>
       </or>
     </and>
   </condition>
   <emission>
     <red>0.8</red>
     <green>0</green>
     <blue>0</blue>
   </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>OrangeLight</object-name>
    <condition>
     <and>
       <greater-than>
         <property>/systems/electrical/outputs/specific</property>
         <value>20.0</value>
       </greater-than>
       <or>
	 <property>/controls/lighting/crew/captain/test</property>	
         <equals>
           <property>/instrumentation/nose-visor/pos-norm</property>
           <property n="1">/sim/flaps/setting[2]</property>
         </equals>
       </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>GreenLight</object-name>
    <condition>
     <and>
       <greater-than>
         <property>/systems/electrical/outputs/specific</property>
         <value>20.0</value>
       </greater-than>
       <or>
	 <property>/controls/lighting/crew/captain/test</property>	
         <equals>
           <property>/instrumentation/nose-visor/pos-norm</property>
           <property n="1">/sim/flaps/setting[3]</property>
         </equals>
       </or>
     </and>
    </condition>
    <emission>
      <red>0</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
