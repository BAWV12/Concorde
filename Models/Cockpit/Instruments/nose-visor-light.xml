<?xml version="1.0"?>
<PropertyList>
  <path>../Models/nosevisor-light.ac</path>
  <animation>
    <type>material</type>
    <object-name>RedLight</object-name>
   <condition>
     <not>
    <or>
       <equals>
        <property>/instrumentation/nose-visor/pos-norm</property>
        <property n="1">/sim/flaps/setting[0]</property>
       </equals>
       <equals>
        <property>/instrumentation/nose-visor/pos-norm</property>
        <property n="1">/sim/flaps/setting[1]</property>
       </equals>
       <equals>
        <property>/instrumentation/nose-visor/pos-norm</property>
        <property n="1">/sim/flaps/setting[2]</property>
       </equals>
       <equals>
        <property>/instrumentation/nose-visor/pos-norm</property>
        <property n="1">/sim/flaps/setting[3]</property>
       </equals>
    </or>
  </not>
   </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>OrangeLight</object-name>
       <condition>
      <equals>
       <property>/instrumentation/nose-visor/pos-norm</property>
       <property n="1">/sim/flaps/setting[2]</property>
      </equals>
         </condition>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>GreenLight</object-name>
    <condition>
      <equals>
       <property>/instrumentation/nose-visor/pos-norm</property>
       <property n="1">/sim/flaps/setting[3]</property>
      </equals>
    </condition>
    <emission>
      <red>0</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <condition>
	<greater-than>
	  <property>systems/lighting/level/roof</property>
	  <value>0</value>
	</greater-than>
  </condition>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
   <factor-prop>systems/lighting/level/roof</factor-prop>
  </emission>
 </animation>
</PropertyList>
