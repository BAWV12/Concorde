<?xml version="1.0"?>
<PropertyList>
  <path>../Models/nosevisor.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
</effect>

  <animation>
    <type>rotate</type>
    <object-name>LeverShaft</object-name>
    <object-name>LeverKnob</object-name>
    <object-name>LeverLock</object-name>
    <property>/controls/flight/flaps</property>
    <factor>82</factor>
    <offset-deg>-46</offset-deg>
    <center>
      <x-m>-0.005</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>LeverShaft</object-name>
    <object-name>LeverKnob</object-name>
    <object-name>LeverLock</object-name>
    <action>
      <name>Flaps Down</name>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>if (getprop("/systems/electrical/outputs/specific")>20) controls.flapsDown(1)</script>
      </binding>
    </action>
    <action>
      <name>Flaps Up</name>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>if (getprop("/systems/electrical/outputs/specific")>20) controls.flapsDown(-1)</script>
      </binding>
    </action>
    </animation>

 <animation>
  <type>material</type>
  <object-name>Cylinder</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>

  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>

  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
 
</PropertyList>
