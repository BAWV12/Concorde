<?xml version="1.0"?>
<PropertyList>
  <path>../Models/brakepressure.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
    <object-name>Guage</object-name>
    <object-name>RightNeedle</object-name>
    <object-name>LeftNeedle</object-name>
    <object-name>FF</object-name>
</effect>


  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </condition>    
  </animation>


  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>    

    <type>rotate</type>
    <object-name>LeftNeedle</object-name>
    <property>/systems/brakes/emerg-left-psi</property>
    <factor>0.35</factor>
    <center>
      <x-m>0.0026</x-m>
      <y-m>-0.0125</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>    

    <type>rotate</type>
    <object-name>RightNeedle</object-name>
    <property>/systems/brakes/emerg-right-psi</property>
    <factor>0.35</factor>
    <center>
      <x-m>0.0026</x-m>
      <y-m>0.0125</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>RightNeedle</object-name>
    <object-name>LeftNeedle</object-name>
    <object-name>FF</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>
