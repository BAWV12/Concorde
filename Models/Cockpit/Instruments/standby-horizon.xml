<?xml version="1.0"?>
<PropertyList>
  <path>../Models/standby-horizon.ac</path>
  <params>
    <roll>/instrumentation/attitude-indicator[0]/indicated-roll-deg</roll>
    <pitch>/instrumentation/attitude-indicator[0]/indicated-pitch-deg</pitch>
    <attitude-serviceable>/instrumentation/attitude-indicator[0]/serviceable</attitude-serviceable>
    <fd-serviceable>/instrumentation/flight-director[0]/serviceable</fd-serviceable>
  </params>

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
      <or>
	<not><property alias="/params/attitude-serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </condition>    
  </animation>

  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/attitude-serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 

    <type>rotate</type>
    <object-name>Horizon</object-name>
    <property alias="/params/roll"/>
    <factor>1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>RollArrow</object-name>
    <property>/instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/attitude-serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>

    <type>textranslate</type>
    <object-name>Horizon</object-name>
    <property alias="/params/pitch"/>
    <factor>0.009765625</factor>
    <axis>
      <x>0</x>
      <y>1</y>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Horizon</object-name>
    <object-name>Inner</object-name>
    <object-name>Offset</object-name>
    <object-name>RollArrow</object-name>
    <object-name>FF</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.01</red>
      <green>0.005</green>
      <blue>0.005</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>
</PropertyList>
