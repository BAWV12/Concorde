<?xml version="1.0"?>
<PropertyList>
  <!--<property>instrumentation/fuel/total-lbs</property>-->
  <!--<property>/consumables/fuel/tank[0]/level-lbs</property>-->
  <path>../Models/fuelremain.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
</effect>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num1</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
              <prod>
                <property>instrumentation/fuel/total-lbs</property>
                <value>0.453592</value>
              </prod>
              <value>10000</value>
            </div>
          </floor>
          <max>
            <div>
              <difference>
                <prod>
                  <property>instrumentation/fuel/total-lbs</property>
                  <value>0.453592</value>
                </prod>
                <value>9900</value>
                <prod>
                  <floor>
                    <div>
                      <prod>
                        <property>instrumentation/fuel/total-lbs</property>
                        <value>0.453592</value>
                      </prod>
                      <value>10000</value>
                    </div>
                  </floor>
                  <value>10000</value>
                </prod>
              </difference>
              <value>100</value>
            </div>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.005</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num2</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
              <prod>
                <property>instrumentation/fuel/total-lbs</property>
                <value>0.453592</value>
              </prod>
              <value>1000</value>
            </div>
          </floor>
          <max>
            <div>
              <difference>
                <prod>
                  <property>instrumentation/fuel/total-lbs</property>
                  <value>0.453592</value>
                </prod>
                <value>900</value>
                <prod>
                  <floor>
                    <div>
                      <prod>
                        <property>instrumentation/fuel/total-lbs</property>
                        <value>0.453592</value>
                      </prod>
                      <value>1000</value>
                    </div>
                  </floor>
                  <value>1000</value>
                </prod>
              </difference>
              <value>100</value>
            </div>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.005</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num3</object-name>
    <object-name>Num4</object-name>
    <object-name>Num5</object-name>
    <property>instrumentation/fuel/total-lbs</property>
    <factor>0.16329312</factor>
    <center>
      <x-m>-0.005</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>Fail</object-name>
    <condition>
	<or>
	      	<less-than>
        		<property>consumables/fuel/tank[0]/level-lbs</property>
        		<value>1000</value>
		</less-than>
	      	<less-than>
        		<property>consumables/fuel/tank[1]/level-lbs</property>
	        	<value>1000</value>
	      	</less-than>
	      	<less-than>
        		<property>consumables/fuel/tank[2]/level-lbs</property>
	        	<value>1000</value>
	      	</less-than>
	      	<less-than>
        		<property>consumables/fuel/tank[3]/level-lbs</property>
	        	<value>1000</value>
	      	</less-than>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>

	</or>

    </condition>
    <center>
      <x-m>-0.005</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Num1</object-name>
    <object-name>Num2</object-name>
    <object-name>Num3</object-name>
    <object-name>Num4</object-name>
    <object-name>Num5</object-name>
    <object-name>Guage</object-name>
    <object-name>Fail</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than> 
 </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
