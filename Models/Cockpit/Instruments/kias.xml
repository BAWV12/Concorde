    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
	<not><property>/instrumentation/airspeed-standby/serviceable</property></not>
      </or>
    </not></condition>    

    <type>rotate</type>
    <object-name>LimitNeedle</object-name>
    <property>instrumentation/airspeed-indicator[0]/vmo-kt</property>
    <interpolation>
      <entry>
        <ind>50</ind>
        <dep>12</dep>
