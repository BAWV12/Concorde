        </less-than>
	<not><property>/instrumentation/airspeed-standby/serviceable</property></not>
      </or>
    </not></condition>    


    <type>rotate</type>
    <object-name>KIASNeedle</object-name>
    <property>instrumentation/airspeed-indicator[0]/indicated-speed-kt</property>
    <interpolation>
      <entry>
        <ind>50</ind>
        <dep>12</dep>
      </entry>
