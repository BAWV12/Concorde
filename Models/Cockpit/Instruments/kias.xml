<?xml version="1.0"?>
<PropertyList>
  <path>../Models/kias.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>LimitNeedle</object-name>
    <object-name>KnotsGuage</object-name>
    <object-name>KIASNeedle</object-name>
    <object-name>MachGuage</object-name>
    <object-name>FF</object-name>

</effect>

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
	<not><property>/instrumentation/airspeed-standby/serviceable</property></not>
    </condition>    
  </animation>


  <animation>
    <condition>
	<property>/instrumentation/airspeed-standby/serviceable</property>
    </condition>    


    <type>rotate</type>
    <object-name>KIASNeedle</object-name>
    <property>/instrumentation/airspeed-standby/indicated-speed-kt</property>
    <interpolation>
      <entry>
        <ind>50</ind>
        <dep>12</dep>
      </entry>
      <entry>
        <ind>100</ind>
        <dep>22</dep>
      </entry>
      <entry>
        <ind>120</ind>
        <dep>57</dep>
      </entry>
      <entry>
        <ind>140</ind>
        <dep>84</dep>
      </entry>
      <entry>
        <ind>160</ind>
        <dep>108</dep>
      </entry>
      <entry>
        <ind>180</ind>
        <dep>129</dep>
      </entry>
      <entry>
        <ind>200</ind>
        <dep>148</dep>
      </entry>
      <entry>
        <ind>220</ind>
        <dep>165</dep>
      </entry>
      <entry>
        <ind>230</ind>
        <dep>172</dep>
      </entry>
      <entry>
        <ind>240</ind>
        <dep>178</dep>
      </entry>
      <entry>
        <ind>250</ind>
        <dep>182</dep>
      </entry>
      <entry>
        <ind>300</ind>
        <dep>211</dep>
      </entry>
      <entry>
        <ind>400</ind>
        <dep>264</dep>
      </entry>
      <entry>
        <ind>500</ind>
        <dep>308</dep>
      </entry>
      <entry>
        <ind>600</ind>
        <dep>345</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <condition>
	<property>/instrumentation/airspeed-standby/serviceable</property>
    </condition>    

    <type>rotate</type>
    <object-name>MachGuage</object-name>
    <expression>
    	<sum>
    		<table>  
    			<property>/instrumentation/airspeed-standby/indicated-mach</property>
			<entry><ind>0.0</ind><dep>45</dep></entry>
			<entry><ind>0.7</ind><dep>45</dep></entry>
			<entry><ind>0.8</ind><dep>20</dep></entry>
			<entry><ind>0.898</ind><dep>8</dep></entry>
			<entry><ind>0.899</ind><dep>8</dep></entry>
			<entry><ind>0.9</ind><dep>8</dep></entry>
			<entry><ind>0.901</ind><dep>8</dep></entry>
			<entry><ind>0.902</ind><dep>8</dep></entry>
        		<entry><ind>0.999</ind><dep>-14</dep></entry>
        		<entry><ind>1</ind><dep>-14</dep></entry>
        		<entry><ind>1.001</ind><dep>-14</dep></entry>
        		<entry><ind>1.2</ind><dep>-52</dep></entry>
        		<entry><ind>1.5</ind><dep>-104</dep></entry>
        		<entry><ind>2</ind><dep>-190</dep></entry>
        		<entry><ind>2.2</ind><dep>-220</dep></entry>
    		</table>
    		<table>  
    			<property>/instrumentation/airspeed-standby/indicated-speed-kt</property>
		      	<entry><ind>249.98</ind><dep>-3</dep></entry>
      			<entry><ind>249.99</ind><dep>-3</dep></entry>
      			<entry><ind>250</ind><dep>-3</dep></entry>
      			<entry><ind>250.01</ind><dep>-3</dep></entry>
      			<entry><ind>250.02</ind><dep>-3</dep></entry>
      			<entry><ind>300</ind><dep>29</dep></entry>
      			<entry><ind>400</ind><dep>81</dep></entry>
      			<entry><ind>500</ind><dep>125</dep></entry>
      			<entry><ind>600</ind><dep>162</dep></entry>
    		</table>
    	</sum>
    </expression>

    <center>
      <x-m>0.001</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>


  <animation>
    <condition>
	<property>/instrumentation/airspeed-standby/serviceable</property>
    </condition>    

    <type>rotate</type>
    <object-name>LimitNeedle</object-name>
    <property>/instrumentation/airspeed-standby/vmo-kt</property>
    <interpolation>
      <entry>
        <ind>50</ind>
        <dep>12</dep>
      </entry>
      <entry>
        <ind>100</ind>
        <dep>22</dep>
      </entry>
      <entry>
        <ind>120</ind>
        <dep>57</dep>
      </entry>
      <entry>
        <ind>140</ind>
        <dep>84</dep>
      </entry>
      <entry>
        <ind>160</ind>
        <dep>108</dep>
      </entry>
      <entry>
        <ind>180</ind>
        <dep>129</dep>
      </entry>
      <entry>
        <ind>200</ind>
        <dep>148</dep>
      </entry>
      <entry>
        <ind>220</ind>
        <dep>165</dep>
      </entry>
      <entry>
        <ind>230</ind>
        <dep>172</dep>
      </entry>
      <entry>
        <ind>240</ind>
        <dep>178</dep>
      </entry>
      <entry>
        <ind>250</ind>
        <dep>182</dep>
      </entry>
      <entry>
        <ind>300</ind>
        <dep>211</dep>
      </entry>
      <entry>
        <ind>400</ind>
        <dep>264</dep>
      </entry>
      <entry>
        <ind>500</ind>
        <dep>308</dep>
      </entry>
      <entry>
        <ind>600</ind>
        <dep>345</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>LimitNeedle</object-name>
    <object-name>KnotsGuage</object-name>
    <object-name>KIASNeedle</object-name>
    <object-name>MachGuage</object-name>
    <object-name>FF</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
