<?xml version="1.0"?>
<PropertyList>
  <path>../Models/engineindicator.ac</path>
  <params>
    <running>/engines/engine[0]/running</running>
    <bucket>/systems/engines/engine[0]/bucket-deg</bucket>
    <fuel>/engines/engine[0]/fuel-flow_pph</fuel>
    <fuel-bug>/controls/engines/engine[0]/bug_pph</fuel-bug>
    <configuration>/systems/engines/engine[0]/configuration</configuration>
  </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>GO</object-name>
    <condition>
      <and>
        <greater-than>
           <property>/systems/electrical/outputs/specific</property>
           <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
      	  <and>
            <greater-than>
              <property alias="/params/fuel"/>
              <property alias="/params/fuel-bug"/>
            </greater-than>
            <property>/instrumentation/takeoff-monitor/armed</property>
          </and>
        </or>
      </and>
    </condition>
    <emission>
      <red>0</red>
      <green>0.5</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>CON</object-name>
    <condition>
      <and>
        <greater-than>
           <property>/systems/electrical/outputs/specific</property>
           <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>	
          <greater-than>
	    <property alias="/params/configuration"/>
	    <value>0</value>
          </greater-than>
        </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0.2</blue>

    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>REV</object-name>
    <condition>
      <and>
        <greater-than>
           <property>/systems/electrical/outputs/specific</property>
           <value>20.0</value>
        </greater-than>
        <or>
	  <property>/controls/lighting/crew/captain/test</property>
      	  <or>
            <and>
              <greater-than>
                <property alias="/params/bucket"/>
                <value>22</value>
              </greater-than>
              <property>/instrumentation/generic/state</property>
            </and>
            <greater-than>
              <property alias="/params/bucket"/>
              <value>70</value>
            </greater-than>
          </or>
        </or>
      </and>
    </condition>
    <emission>
      <red>0</red>
      <green>0</green>
      <blue>0.8</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
