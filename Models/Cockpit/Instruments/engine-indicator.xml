<?xml version="1.0"?>
<PropertyList>
  <path>../Models/engineindicator.ac</path>
  <params>
    <running>/engines/engine[0]/running</running>
    <bucket>/systems/engines/engine[0]/bucket-deg</bucket>
    <fuel>/engines/engine[0]/fuel-flow_pph</fuel>
    <fuel-bug>/controls/engines/engine[0]/bug_pph</fuel-bug>
    <configuration>/systems/engines/engine[0]/configuration</configuration>
  </params>
  <animation>
    <type>material</type>
    <object-name>GO</object-name>
    <condition>
    <and>
      <greater-than>
        <property alias="/params/fuel"/>
        <property alias="/params/fuel-bug"/>
      </greater-than>
      <property>/instrumentation/takeoff-monitor/armed</property>
    </and>
    </condition>
    <emission>
      <red>0</red>
      <green>0.5</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>CON</object-name>
    <emission>
      <red>0.8</red>
      <green>.4</green>
      <blue>0</blue>
      <factor-prop alias="/params/configuration"/>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>REV</object-name>
    <condition>
      <or>
        <and>
          <greater-than>
            <property alias="/params/bucket"/>
            <value>22</value>
          </greater-than>
          <property>/instrumentation/generic/state</property>
        </and>
        <greater-than>
          <property alias="/params/bucket"/>
          <value>70</value>
        </greater-than>
      </or>
    </condition>
    <emission>
      <red>0</red>
      <green>0</green>
      <blue>0.8</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.01</red>
      <green>0.005</green>
      <blue>0.005</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>
