<?xml version="1.0"?>
<PropertyList>
  <path>../Models/flight-director-label.ac</path>
  <animation>
    <type>material</type>
    <object-name>Label</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </emission>
  </animation>
</PropertyList>
