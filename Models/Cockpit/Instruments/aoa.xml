<?xml version="1.0"?>
<PropertyList>
  <path>../Models/aoa.ac</path>
  <params>
  <alpha-deg>instrumentation/accelerometer-aoa[0]/alpha-deg</alpha-deg>
  <serviceable>/instrumentation/accelerometer-aoa[0]/serviceable</serviceable>
  <failure-flag>/instrumentation/accelerometer-aoa[0]/failure-flag</failure-flag>
  </params>

<effect>
	   <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
	   <object-name>Frame</object-name>

</effect>

<effect>
	   <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Guage</object-name>
    <object-name>FF</object-name>
    <object-name>FF.001</object-name>
    <object-name>Accl</object-name>
    <object-name>Aoa</object-name>


</effect>


  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <object-name>FF.001</object-name>
    <condition>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </condition>    
  </animation>

  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>    

    <type>translate</type>
    <object-name>Accl</object-name>
    <property>/fdm/jsbsim/accelerations/Nz</property>
    <interpolation>
      <entry>
        <ind>3.5</ind>
        <dep>.073</dep>
      </entry>
      <entry>
        <ind>-1</ind>
        <dep>-.073</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>    

    <type>translate</type>
    <object-name>Aoa</object-name>
    <property alias="/params/alpha-deg"/>
    <interpolation>
      <entry>
        <ind>25</ind>
        <dep>.076</dep>
      </entry>
      <entry>
        <ind>-5</ind>
        <dep>-.076</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>FF</object-name>
    <object-name>FF.001</object-name>
    <object-name>Accl</object-name>
    <object-name>Aoa</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
   </emission>
 </animation>
</PropertyList>
