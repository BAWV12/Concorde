<?xml version="1.0"?>
<PropertyList>
  <path>../Models/enginenozzle.ac</path>
  <params>
    <nozzle>/engines/engine[0]/nozzle-pos-norm</nozzle>
  </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Guage</object-name>
    <object-name>Needle</object-name>
    <object-name>Num1</object-name>
    <object-name>Num2</object-name>
    <object-name>Num3</object-name>

</effect>

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </condition>    
  </animation>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Needle</object-name>
    <property alias="/params/nozzle"/>
    <factor>225</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Numbers-->
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Num1</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <property alias="/params/nozzle"/>
          </floor>
          <max>
            <prod>
              <difference>
                <property alias="/params/nozzle"/>
                <value>0.99</value>
                <floor>
                  <property alias="/params/nozzle"/>
                </floor>
              </difference>
              <value>100</value>
            </prod>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.00720</x-m>
      <y-m>-0.05</y-m>
      <z-m>-0.01200</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Num2</object-name>
    <expression>
      <prod>
        <sum>
          <div>
            <floor>
              <prod>
                <property alias="/params/nozzle"/>
                <value>10</value>
              </prod>
            </floor>
            <value>10</value>
          </div>
          <max>
            <prod>
              <difference>
                <property alias="/params/nozzle"/>
                <value>0.09</value>
                <div>
                  <floor>
                    <prod>
                      <property alias="/params/nozzle"/>
                      <value>10</value>
                    </prod>
                  </floor>
                  <value>10</value>
                </div>
              </difference>
              <value>10</value>
            </prod>
            <value>0</value>
          </max>
        </sum>
        <value>360</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.00720</x-m>
      <y-m>0</y-m>
      <z-m>-0.01200</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Num3</object-name>
    <property alias="/params/nozzle"/>
    <factor>3600</factor>
    <center>
      <x-m>-0.00720</x-m>
      <y-m>0.005</y-m>
      <z-m>-0.01200</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>Needle</object-name>
    <object-name>Num1</object-name>
    <object-name>Num2</object-name>
    <object-name>Num3</object-name>

  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>
