<?xml version="1.0"?>
<PropertyList>
  <path>../Models/engine-rating.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
    <object-name>CTY</object-name>
    <object-name>TO</object-name>
    <object-name>CLB</object-name>
    <object-name>CRS</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>CTY</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
	<and>
	  <or>
	    <property>/controls/lighting/crew/captain/test</property>	
	    <and>
        	<property>/instrumentation/generic/state</property>
        	<property>/controls/engines/engine[0]/contingency</property>
        	<property>/controls/engines/engine[1]/contingency</property>
        	<property>/controls/engines/engine[2]/contingency</property>
        	<property>/controls/engines/engine[3]/contingency</property>
            </and>
          </or>
	</and>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>TO</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
	<and>
	  <or>
	    <property>/controls/lighting/crew/captain/test</property>	
	    <and>
              <equals>
                <property>/systems/engines/engine[0]/rating</property>
                <value>takeoff</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[1]/rating</property>
                <value>takeoff</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[2]/rating</property>
                <value>takeoff</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[3]/rating</property>
                <value>takeoff</value>
              </equals>
            </and>
          </or>
	</and>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>CLB</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
	<and>
	  <or>
	    <property>/controls/lighting/crew/captain/test</property>	
	    <and>
              <equals>
                <property>/systems/engines/engine[0]/rating</property>
                <value>climb</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[1]/rating</property>
                <value>climb</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[2]/rating</property>
                <value>climb</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[3]/rating</property>
                <value>climb</value>
              </equals>
            </and>
          </or>
	</and>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>CRS</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
	<and>
	  <or>
	    <property>/controls/lighting/crew/captain/test</property>	
	    <and>
              <equals>
                <property>/systems/engines/engine[0]/rating</property>
                <value>cruise</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[1]/rating</property>
                <value>cruise</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[2]/rating</property>
                <value>cruise</value>
              </equals>
              <equals>
                <property>/systems/engines/engine[3]/rating</property>
                <value>cruise</value>
              </equals>
            </and>
          </or>
	</and>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
