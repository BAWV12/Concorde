<?xml version="1.0"?>
<PropertyList>
  <path>../Models/vor-compass.ac</path>
  <params>
    <heading-deg>/instrumentation/compass[0]/heading-deg</heading-deg>
  </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>VORLabel</object-name>
    <object-name>VOR1Error</object-name>
    <object-name>VOR2Error</object-name>
    <object-name>Guage</object-name>
    <object-name>VOR1Needle</object-name>
    <object-name>VOR2Needle</object-name>

</effect>


  <animation>
    <type>rotate</type>
    <object-name>Guage</object-name>
    <property alias="/params/heading-deg"/>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>VOR1Needle</object-name>
    <expression>
        <value>90</value>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>VOR2Needle</object-name>
    <expression>
        <value>90</value>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>VOR1Needle</object-name>
    <expression>
      <prod>
       <sum>
        <difference>
          <property>/instrumentation/nav[1]/heading-deg</property>
          <property>/orientation/heading-deg</property>
        </difference>
        <value>90</value>
       </sum>
       <property>/instrumentation/nav[1]/in-range</property>
       <difference>
	 	<value>1</value>
	  	<property>/instrumentation/nav[1]/frequencies/is-localizer-frequency</property>
       </difference>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>VOR2Needle</object-name>
    <expression>
      <prod>
       <sum>
        <difference>
          <property>/instrumentation/nav[2]/heading-deg</property>
          <property>/orientation/heading-deg</property>
        </difference>
        <value>-90</value>
       </sum>
       <property>/instrumentation/nav[2]/in-range</property>
       <difference>
	 	<value>1</value>
	  	<property>/instrumentation/nav[2]/frequencies/is-localizer-frequency</property>
       </difference>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>VOR1Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/nav[1]/in-range</property>
      </not>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>VOR2Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/nav[2]/in-range</property>
      </not>
    </condition>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>VORLabel</object-name>
    <object-name>VOR1Error</object-name>
    <object-name>VOR2Error</object-name>
    <object-name>Guage</object-name>
    <object-name>VOR1Needle</object-name>
    <object-name>VOR2Needle</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>

