<?xml version="1.0"?>
<PropertyList>
  <path>../Models/vor-compass.ac</path>
  <params>
    <heading-deg>/instrumentation/compass[0]/heading-deg</heading-deg>
  </params>
  <animation>
    <type>rotate</type>
    <object-name>Guage</object-name>
    <property alias="/params/heading-deg"/>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR1Needle</object-name>
    <expression>
      <prod>
        <difference>
          <property>/instrumentation/nav[1]/heading-deg</property>
          <property>/orientation/heading-deg</property>
        </difference>
        <property>/instrumentation/nav[1]/in-range</property>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR2Needle</object-name>
    <expression>
      <prod>
        <difference>
          <property>/instrumentation/nav[2]/heading-deg</property>
          <property>/orientation/heading-deg</property>
        </difference>
        <property>/instrumentation/nav[2]/in-range</property>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR1Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/nav[1]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>VOR2Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/nav[2]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>VOR1Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/nav[1]/in-range</property>
      </not>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>VOR2Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/nav[2]/in-range</property>
      </not>
    </condition>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>VORLabel</object-name>
    <object-name>VOR1Error</object-name>
    <object-name>VOR2Error</object-name>
    <object-name>Guage</object-name>
    <object-name>VOR1Needle</object-name>
    <object-name>VOR2Needle</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <condition>
	<greater-than>
	  <property>systems/lighting/level/roof</property>
	  <value>0</value>
	</greater-than>
  </condition>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
   <factor-prop>systems/lighting/level/roof</factor-prop>
  </emission>
 </animation>

</PropertyList>
