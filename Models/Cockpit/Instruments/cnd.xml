<?xml version="1.0"?>
<PropertyList>
  <path>../Models/cnd.ac</path>

  <!--Default Lighting-->

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </condition>    
  </animation>



 <animation>
  <type>material</type>
  <object-name>Adjust.002</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
  </and>
  </condition>

  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </emission>
 </animation>



  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.01</red>
      <green>0.005</green>
      <blue>0.005</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Adjust</object-name>
    <property>instrumentation/efis[1]/inputs/range-nm</property>
    <factor>5</factor>
    <center>
      <x-m>0.00506</x-m>
      <y-m>0.04699</y-m>
      <z-m>-0.04682</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>Adjust</object-name>
    <action>
      <name>Up</name>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/efis[1]/inputs/range-nm</property>
        <step>5</step>
        <min>5</min>
        <max>40</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <name>Dwn</name>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/efis[1]/inputs/range-nm</property>
        <step>-5</step>
        <min>5</min>
        <max>40</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>




</PropertyList>
