<?xml version="1.0"?>
<PropertyList>
  <path>../Models/landing-gear.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
    <object-name>GearStick</object-name>
    <object-name>GearKnob1</object-name>
    <object-name>GearKnob2</object-name>
  <object-name>GearKnob1.001</object-name>
  <object-name>GearKnob2.001</object-name>
</effect>

 <animation>
  <name>GearBulbs</name>
  <object-name>GearKnob1.001</object-name>
  <object-name>GearKnob2.001</object-name>
 </animation>


 <animation>
  <type>material</type>
  <object-name>GearBulbs</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>

  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </emission>
 </animation>


  <animation>
    <type>rotate</type>
    <object-name>GearStick</object-name>
    <object-name>GearKnob1</object-name>
    <object-name>GearKnob2</object-name>
    <property>/controls/gear/gear-down</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <center>
      <x-m>-0.01</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>GearStick</object-name>
    <object-name>GearKnob1</object-name>
    <object-name>GearKnob2</object-name>
    <property>/controls/gear/hydraulic</property>
    <factor>-30</factor>
    <offset-deg>30</offset-deg>
    <center>
      <x-m>-0.01</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>GearStick</object-name>
    <object-name>GearKnob1</object-name>
    <object-name>GearKnob2</object-name>
    <action>
      <name>Gear Toggle</name>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>controls.gearToggle()</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
 
</PropertyList>
