<?xml version="1.0"?>
<PropertyList>
  <path>../Models/landing-gear.ac</path>
  <animation>
    <type>rotate</type>
    <object-name>GearStick</object-name>
    <object-name>GearKnob1</object-name>
    <object-name>GearKnob2</object-name>
    <property>/controls/gear/gear-down</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <center>
      <x-m>-0.01</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>GearStick</object-name>
    <object-name>GearKnob1</object-name>
    <object-name>GearKnob2</object-name>
    <property>/controls/gear/hydraulic</property>
    <factor>-30</factor>
    <offset-deg>30</offset-deg>
    <center>
      <x-m>-0.01</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>GearStick</object-name>
    <object-name>GearKnob1</object-name>
    <object-name>GearKnob2</object-name>
    <action>
      <name>Gear Toggle</name>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>controls.gearToggle()</script>
      </binding>
    </action>
  </animation>
</PropertyList>
