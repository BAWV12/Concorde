  <animation>
    <type>material</type>
    <object-name>TYRE</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <property alias="/params/test"/>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>MCG</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <not>
          <property alias="/params/serviceable"/>
        </not>
        <less-than>
          <property alias="/params/cg-sel"/>
          <property alias="/params/min-sel"/>
        </less-than>
        <greater-than>
          <property alias="/params/cg-sel"/>
          <property alias="/params/max-sel"/>
        </greater-than>
      </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
      <factor-prop>systems/lighting/level/panel/main</factor-prop>
  </emission>
 </animation>

</PropertyList>
