<?xml version="1.0"?>
<PropertyList>
  <path>../Models/afcswarninglights.ac</path>
  <params>
    <test>/controls/autoflight/autopilot[0]/test-land</test>
    <failure-sel>/systems/autopilot/state/failure[0]</failure-sel>
    <serviceable-sel>/systems/autothrottle[0]/serviceable</serviceable-sel>
    <decision-ctrl>/instrumentation/radio-altimeter[0]/decision-height</decision-ctrl>
    <decision-ft>/instrumentation/radio-altimeter[0]/decision-ft</decision-ft>
    <ft-sel>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</ft-sel>
  </params>
  <animation>
    <type>material</type>
    <object-name>AP</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <property alias="/params/failure-sel"/>
      </or>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>AT</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <not>
          <property alias="/params/serviceable-sel"/>
        </not>
      </or>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>LOCLeft</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <and>
          <property>/controls/autoflight/land-display</property>
          <less-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>-0.05</value>
          </less-than>
        </and>
      </or>
    </condition>
    <emission>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>LOCRight</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <and>
          <property>/controls/autoflight/land-display</property>
          <greater-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>0.05</value>
          </greater-than>
        </and>
      </or>
    </condition>
    <emission>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>GSDown</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <and>
          <property>/controls/autoflight/land-display</property>
          <less-than>
            <property>/instrumentation/nav[0]/gs-needle-deflection-norm</property>
            <value>-0.05</value>
          </less-than>
        </and>
      </or>
    </condition>
    <emission>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>GSUp</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <and>
          <property>/controls/autoflight/land-display</property>
          <greater-than>
            <property>/instrumentation/nav[0]/gs-needle-deflection-norm</property>
            <value>0.05</value>
          </greater-than>
        </and>
      </or>
    </condition>
    <emission>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Aircraft1</object-name>
    <object-name>Aircraft2</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <property>/controls/autoflight/land-display</property>
      </or>
    </condition>
    <emission>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Land2</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <property>/systems/autopilot/state/land2</property>
      </or>
    </condition>
    <emission>
      <red>0</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Land3</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <property>/systems/autopilot/state/land3</property>
      </or>
    </condition>
    <emission>
      <red>0</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>DH</object-name>
    <condition>
      <or>
        <property alias="/params/test"/>
        <and>
          <property>/instrumentation/radio-altimeter[0]/decision-height</property>
          <less-than-equals>
            <property>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</property>
            <property>/instrumentation/radio-altimeter[0]/decision-ft</property>
          </less-than-equals>
        </and>
      </or>
    </condition>
    <emission>
      <red>0.5</red>
      <green>0.2</green>
      <blue>0.0</blue>
    </emission>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>Test</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-assign</command>
        <property alias="/params/test"/>
        <value>1</value>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property alias="/params/test"/>
          <value>0</value>
        </binding>
      </mod-up>
    </action>
  </animation>
