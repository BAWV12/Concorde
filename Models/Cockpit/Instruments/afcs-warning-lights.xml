<?xml version="1.0"?>
<PropertyList>
  <path>../Models/afcswarninglights.ac</path>
  <params>
    <test>/controls/autoflight/autopilot[0]/test-land</test>
    <failure-sel>/systems/autopilot/state/failure[0]</failure-sel>
    <serviceable-sel>/systems/autothrottle[0]/serviceable</serviceable-sel>
    <decision-ctrl>/instrumentation/radio-altimeter[0]/decision-height</decision-ctrl>
    <decision-ft>/instrumentation/radio-altimeter[0]/decision-ft</decision-ft>
    <ft-sel>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</ft-sel>
    <navloc>/instrumentation/nav[1]/nav-loc</navloc>
    <navinrange>/instrumentation/nav[1]/in-range</navinrange>
    <gsinrange>/instrumentation/nav[1]/gs-in-range</gsinrange>
    <hasgs>/instrumentation/nav[1]/has-gs</hasgs>
    <dist>/instrumentation/nav[1]/nav-distance</dist>
    <tmo-sel>/instrumentation/temperature[0]/indicated-tmo-degc</tmo-sel>
  </params>

<effect>
	   <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
	   <object-name>Frame</object-name>
	   <object-name>Frame2</object-name>
	   <object-name>Frame3</object-name>
	   <object-name>APLabel</object-name>
	   <object-name>ATLabel</object-name>
	   <object-name>AP</object-name>
	   <object-name>AT</object-name>
	   <object-name>DH</object-name>
	   <object-name>LOCLeft</object-name>
	   <object-name>LOCRight</object-name>
	   <object-name>GSUp</object-name>
	   <object-name>GSDown</object-name>
	   <object-name>Aircraft1</object-name>
	   <object-name>Aircraft2</object-name>
	   <object-name>Land2</object-name>
	   <object-name>Land3</object-name>
	   <object-name>Test</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>AP</object-name>
    <condition>
     <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
      <not include="concorde-cond-voltage-bulb.xml"/>
      <or>
       <and>
        <property alias="/params/test"/>
        <not include="concorde-cond-flashing-light.xml"/>
       </and>
       <and>
        <not include="concorde-cond-flashing-light.xml"/>
        <property alias="/params/failure-sel"/>
       </and>
       <not include="concorde-cond-voltage-autopilot.xml"/>
      </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>AT</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
       <not include="concorde-cond-voltage-bulb.xml"/>
       <or>
        <and>
         <property alias="/params/test"/>
         <not include="concorde-cond-flashing-light.xml"/>
        </and>
        <and>
         <not include="concorde-cond-flashing-light.xml"/>
         <or>
	 <greater-than>
        	<property alias="/params/tmo-sel"/>
		<value>128</value>
	 </greater-than>
          <not>
           <property alias="/params/serviceable-sel"/>
          </not>
          <and>
           <equals>
            <property>/autopilot/locks/altitude</property>
            <value>altitude-hold</value>
           </equals>
           <equals>
            <property>/autopilot/locks/speed</property>
            <value></value>
           </equals>
          </and>
          <and>
           <equals>
            <property>/autopilot/locks/altitude</property>
            <value>gs1-hold</value>
           </equals>
           <equals>
            <property>/autopilot/locks/speed</property>
            <value></value>
           </equals>
          </and>
          <and>
           <or include="concorde-cond-land.xml"/>       <!-- bug -->
           <greater-than>
            <property>/position/altitude-agl-ft</property>
            <value>14</value> <!-- autoland stops below -->
           </greater-than>
           <equals>
            <property>/controls/autoflight/speed</property>
            <value></value>
           </equals>
          </and>
          <and>
           <not>
            <property>/instrumentation/airspeed-indicator[0]/serviceable</property>
           </not>
           <not-equals>
            <property>/autopilot/locks/speed</property>
            <value></value>
           </not-equals>
          </and>
         </or>
        </and>
        <not include="concorde-cond-voltage-autopilot.xml"/>
       </or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>LOCLeft</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <and>
          <less-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>-0.05</value>
          </less-than>
          <greater-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>-0.85</value>
          </greater-than>
	  <property alias="/params/navloc"/>
          <less-than>
            <property alias="/params/dist"/>
            <value>35000</value>
          </less-than>
        </and>
      </or>
     </and>
    </condition>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>LOCRight</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <and>
          <greater-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>0.05</value>
          </greater-than>
          <less-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>0.85</value>
          </less-than>
	  <property alias="/params/navloc"/>
          <less-than>
            <property alias="/params/dist"/>
            <value>35000</value>
          </less-than>
        </and>
      </or>
     </and>
    </condition>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>GSDown</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <and>
          <less-than>
            <property>/instrumentation/nav[0]/gs-needle-deflection-norm</property>
            <value>-0.05</value>
          </less-than>
	  <property alias="/params/navloc"/>
          <less-than>
            <property alias="/params/dist"/>
            <value>35000</value>
          </less-than>
	  <property alias="/params/gsinrange"/>
	  <property alias="/params/hasgs"/>
          <greater-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>-0.85</value>
          </greater-than>
          <less-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>0.85</value>
          </less-than>
        </and>
      </or>
     </and>
    </condition>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>GSUp</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <and>
          <greater-than>
            <property>/instrumentation/nav[0]/gs-needle-deflection-norm</property>
            <value>0.05</value>
          </greater-than>
	  <property alias="/params/navloc"/>
	  <property alias="/params/navinrange"/>
          <less-than>
            <property alias="/params/dist"/>
            <value>35000</value>
          </less-than>
	  <property alias="/params/hasgs"/>
          <greater-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>-0.85</value>
          </greater-than>
          <less-than>
            <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
            <value>0.85</value>
          </less-than>
        </and>
      </or>
     </and>
    </condition>
    <emission>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Aircraft1</object-name>
    <object-name>Aircraft2</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

     <or>
      <property alias="/params/test"/>
      <and>
        <property alias="/params/navloc"/>
          <less-than>
            <property alias="/params/dist"/>
            <value>35000</value>
          </less-than>
      </and>
     </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Land2</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <property>/systems/autopilot/state/land2</property>
      </or>
     </and>
    </condition>
    <emission>
      <red>0</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Land3</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <property>/systems/autopilot/state/land3</property>
      </or>
</and>
    </condition>
    <emission>
      <red>0</red>
      <green>0.8</green>
      <blue>0</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>DH</object-name>
    <condition>
     <and>

        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      <or>
        <property alias="/params/test"/>
        <and>
          <property>/instrumentation/radio-altimeter[0]/decision-height</property>
          <less-than-equals>
            <property>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</property>
            <property>/instrumentation/radio-altimeter[0]/decision-ft</property>
          </less-than-equals>
        </and>
      </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0.0</blue>
    </emission>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>Test</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-assign</command>
        <property alias="/params/test"/>
        <value>1</value>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property alias="/params/test"/>
          <value>0</value>
        </binding>
      </mod-up>
    </action>
  </animation>
 
  <!--Default Lighting-->
 
   <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <object-name>Frame2</object-name>
    <object-name>Frame3</object-name>
    <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
    </emission>
 </animation>

  <animation>
    <type>material</type>
    <object-name>TestLabel</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>

 
</PropertyList>
