<?xml version="1.0"?>
<PropertyList>
  <path>../Models/radio-altimeter.ac</path>
  <params>
    <serviceable>/instrumentation/radio-altimeter[0]/serviceable</serviceable>
    <dial-ft>/instrumentation/radio-altimeter[0]/dial-decision-ft</dial-ft>
    <decision-ft>/instrumentation/radio-altimeter[0]/dial-decision-ft</decision-ft>
    <ft-sel>/instrumentation/radio-altimeter[0]/indicated-altitude-ft</ft-sel>
    <decision-ctrl>/instrumentation/radio-altimeter[0]/decision-height</decision-ctrl>
  </params>

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
      <or>
	<not><property alias="/params/serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </condition>    
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>DHAdjust</object-name>
    <property alias="/params/decision-ft"/>
    <factor>1</factor>
    <center>
      <x-m>0.00742</x-m>
      <y-m>0.03008</y-m>
      <z-m>-0.03</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>



  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition> 


    <type>rotate</type>
    <object-name>RadioAltitude</object-name>
    <object-name>RadioAltitudeBlack</object-name>
    <property alias="/params/ft-sel"/>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>500</ind>
        <dep>180</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>270</dep>
      </entry>
      <entry>
        <ind>2000</ind>
        <dep>292</dep>
      </entry>
      <entry>
        <ind>2500</ind>
        <dep>315</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>DHAltitude</object-name>
    <property alias="/params/dial-ft"/>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>500</ind>
        <dep>180</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>270</dep>
      </entry>
      <entry>
        <ind>2000</ind>
        <dep>292</dep>
      </entry>
      <entry>
        <ind>2500</ind>
        <dep>315</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- Adjustment wheel -->
  <animation>
    <type>pick</type>
    <object-name>DHAdjust</object-name>
    <action>
      <name>DH Reset</name>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property alias="/params/decision-ctrl"/>
        <value>false</value>
      </binding>
    </action>
    <action>
      <name>Altimeter Adjust Up</name>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property alias="/params/dial-ft"/>
        <step>10</step>
        <min>0</min>
        <max>1000</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <name>Altimeter Adjust Down</name>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property alias="/params/dial-ft"/>
        <step>-10</step>
        <min>0</min>
        <max>1000</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.01</red>
      <green>0.005</green>
      <blue>0.005</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>RadioAltitude</object-name>
    <object-name>DHAdjust.001</object-name>
    <object-name>DHAltitude</object-name>
    <object-name>Guage</object-name>
    <object-name>FF</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </emission>
  </animation>
</PropertyList>
