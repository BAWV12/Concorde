<?xml version="1.0"?>
<PropertyList>
  <path>../Models/asi.ac</path>
  <params>
    <test>/controls/lighting/crew/copilot/test</test>
    <serviceable>/instrumentation/airspeed-indicator[0]/serviceable</serviceable>
    <failure-flag>/instrumentation/airspeed-indicator[0]/failure-flag</failure-flag>
    <vmo-failure-flag>/instrumentation/airspeed-indicator[0]/vmo-failure-flag</vmo-failure-flag>
    <speed-sel>/instrumentation/airspeed-indicator[0]/indicated-speed-kt</speed-sel>
    <vmo-sel>/instrumentation/airspeed-indicator[0]/vmo-kt</vmo-sel>
    <standby-ctrl>/instrumentation/airspeed-indicator[0]/standby</standby-ctrl>
  </params>

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
	<property alias="/params/standby-ctrl"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </condition>    
  </animation>

  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
	<property alias="/params/standby-ctrl"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>  
    <type>rotate</type>
    <object-name>ASINeedle</object-name>
    <property alias="/params/speed-sel"/>
    <interpolation>
      <entry>
        <ind>60</ind>
        <dep>-8</dep>
      </entry>
      <entry>
        <ind>200</ind>
        <dep>96</dep>
      </entry>
      <entry>
        <ind>250</ind>
        <dep>133</dep>
      </entry>
      <entry>
        <ind>350</ind>
        <dep>175</dep>
      </entry>
      <entry>
        <ind>570</ind>
        <dep>340</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
	<property alias="/params/standby-ctrl"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>  

    <type>rotate</type>
    <object-name>LimitNeedle</object-name>
    <property alias="/params/vmo-sel"/>
    <interpolation>
      <entry>
        <ind>60</ind>
        <dep>-8</dep>
      </entry>
      <entry>
        <ind>200</ind>
        <dep>96</dep>
      </entry>
      <entry>
        <ind>250</ind>
        <dep>133</dep>
      </entry>
      <entry>
        <ind>350</ind>
        <dep>175</dep>
      </entry>
      <entry>
        <ind>570</ind>
        <dep>340</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
	<property alias="/params/standby-ctrl"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>  

    <type>rotate</type>
    <object-name>Number1</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
              <property alias="/params/speed-sel"/>
              <value>100</value>
            </div>
          </floor>
          <max>
            <difference>
              <property alias="/params/speed-sel"/>
              <value>99</value>
              <prod>
                <floor>
                  <div>
                    <property alias="/params/speed-sel"/>
                    <value>100</value>
                  </div>
                </floor>
                <value>100</value>
              </prod>
            </difference>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.0085</x-m>
      <y-m>-0.004</y-m>
      <z-m>0.015</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
	<property alias="/params/standby-ctrl"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>  

    <type>rotate</type>
    <object-name>Number2</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
              <property alias="/params/speed-sel"/>
              <value>10</value>
            </div>
          </floor>
          <max>
            <difference>
              <property alias="/params/speed-sel"/>
              <value>9</value>
              <prod>
                <floor>
                  <div>
                    <property alias="/params/speed-sel"/>
                    <value>10</value>
                  </div>
                </floor>
                <value>10</value>
              </prod>
            </difference>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.0085</x-m>
      <y-m>0</y-m>
      <z-m>0.015</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
	<property alias="/params/failure-flag"/>
	<property alias="/params/standby-ctrl"/>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>  

    <type>rotate</type>
    <object-name>Number3</object-name>
    <property alias="/params/speed-sel"/>
    <factor>36</factor>
    <center>
      <x-m>-0.0085</x-m>
      <y-m>0.004</y-m>
      <z-m>0.015</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <condition>
	<greater-than>
	  <property>systems/lighting/level/roof</property>
	  <value>0</value>
	</greater-than>
  </condition>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
   <factor-prop>systems/lighting/level/roof</factor-prop>
  </emission>
 </animation>
  <animation>
    <type>material</type>
    <object-name>ASINeedle</object-name>
    <object-name>Number1</object-name>
    <object-name>Number2</object-name>
    <object-name>Number3</object-name>
    <object-name>LimitNeedle</object-name>
    <object-name>Guage</object-name>
    <object-name>FF</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </emission>
  </animation>
</PropertyList>
