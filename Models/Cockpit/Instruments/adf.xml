<?xml version="1.0"?>
<PropertyList>
  <path>../Models/adf-compass.ac</path>
  <params>
    <heading-deg>/instrumentation/compass[0]/heading-deg</heading-deg>
  </params>
  <animation>
    <type>rotate</type>
    <object-name>Guage</object-name>
    <property alias="/params/heading-deg"/>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF1Needle</object-name>
    <property>/instrumentation/adf[0]/indicated-bearing-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF2Needle</object-name>
    <property>/instrumentation/adf[1]/indicated-bearing-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF1Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/adf[0]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>ADF2Needle</object-name>
    <expression>
      <prod>
        <abs>
          <difference>
            <property>/instrumentation/adf[1]/in-range</property>
            <value>1</value>
          </difference>
        </abs>
        <value>90</value>
      </prod>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>ADF1Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/adf[0]/in-range</property>
      </not>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>ADF2Error</object-name>
    <condition>
      <not>
        <property>/instrumentation/adf[1]/in-range</property>
      </not>
    </condition>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.66</red>
      <green>0.68</green>
      <blue>0.64</blue>
      <factor-prop>systems/lighting/level/panel/main</factor-prop>
    </emission>
 </animation>
  <animation>
    <type>material</type>
    <object-name>ADFLabel</object-name>
    <object-name>ADF1Error</object-name>
    <object-name>ADF2Error</object-name>
    <object-name>Guage</object-name>
    <object-name>ADF1Needle</object-name>
    <object-name>ADF2Needle</object-name>
  <condition>
  <and>
   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
</PropertyList>
