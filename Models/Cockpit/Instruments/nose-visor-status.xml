<?xml version="1.0"?>
<PropertyList>
  <path>../Models/nosevisor-status.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
    <object-name>VisorLabelTransit</object-name>
    <object-name>NoseLabelTransit</object-name>
    <object-name>VisorLabel2</object-name>
    <object-name>NoseLabel2</object-name>
    <object-name>VisorLabel</object-name>
    <object-name>NoseLabel</object-name>
    <object-name>VisorLabel2.002</object-name>
    <object-name>VisorLabel2.001</object-name>
</effect>

  <animation>
    <condition>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
    </condition>
    <type>textranslate</type>
    <object-name>VisorLabel</object-name>
    <property>/instrumentation/nose-visor/pos-norm</property>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>.33</ind>
        <dep>.66</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>-1</y>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>VisorLabelTransit</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <not-equals>
          <property>/instrumentation/nose-visor/pos-norm</property>
          <value>0</value>
        </not-equals>
        <less-than>
          <property>/instrumentation/nose-visor/pos-norm</property>
          <value>0.33</value>
        </less-than>
      </and>
    </condition>
  </animation>
  <animation>
    <condition>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
    </condition>
    <type>textranslate</type>
    <object-name>NoseLabel</object-name>
    <property>/instrumentation/nose-visor/pos-norm</property>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>.33</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>.66</ind>
        <dep>.33</dep>
      </entry>
      <entry>
        <ind>1</ind>
        <dep>.66</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>-1</y>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>NoseLabelTransit</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
        <greater-than>
          <property>/instrumentation/nose-visor/pos-norm</property>
          <value>0.33</value>
        </greater-than>
        <not-equals>
          <property>/instrumentation/nose-visor/pos-norm</property>
          <value>0.67</value>
        </not-equals>
        <not-equals>
          <property>/instrumentation/nose-visor/pos-norm</property>
          <value>1</value>
        </not-equals>
      </and>
    </condition>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

  <animation>
    <type>material</type>
    <object-name>VisorLabelTransit</object-name>
    <object-name>NoseLabelTransit</object-name>
    <object-name>VisorLabel2</object-name>
    <object-name>NoseLabel2</object-name>
    <object-name>VisorLabel</object-name>
    <object-name>NoseLabel</object-name>
    <object-name>VisorLabel2.002</object-name>
    <object-name>VisorLabel2.001</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>

</PropertyList>
