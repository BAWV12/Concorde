<?xml version="1.0"?>
<PropertyList>
  <path>../Models/takeoffmonitor.ac</path>
  <animation>
    <type>material</type>
    <object-name>Button</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

         <property>/instrumentation/takeoff-monitor/armed</property>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Button</object-name>
    <condition>
      <and>
         <not><property>/instrumentation/takeoff-monitor/armed</property></not>

   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      </and>
    </condition>
    <emission>
      <red>0.35</red>
      <green>0.1</green>
      <blue>0.1</blue>
    </emission>
  </animation>


    <animation>
    <type>pick</type>
    <object-name>Button</object-name>
    <action>
      <name>Toggle</name>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/takeoff-monitor/armed</property>
      </binding>
          <binding>
        <command>property-toggle</command>
        <property>/instrumentation/generic/click</property>
      </binding>
      </action>
    </animation>
      <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame.001</object-name>
  <condition>
	<greater-than>
	  <property>systems/lighting/level/roof</property>
	  <value>0</value>
	</greater-than>
  </condition>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
   <factor-prop>systems/lighting/level/roof</factor-prop>
  </emission>
 </animation>
</PropertyList>
