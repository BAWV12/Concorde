<?xml version="1.0"?>
<PropertyList>
  <path>../Models/takeoffmonitor.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame.001</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>Button</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
	<or>
          <property>/instrumentation/takeoff-monitor/armed</property>
          <property>/controls/lighting/crew/captain/test</property>
	</or>
      </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Button</object-name>
    <condition>
      <and>
         <not><property>/instrumentation/takeoff-monitor/armed</property></not>

   <greater-than>
    <property>sim/time/sun-angle-rad</property>
    <value>1.59</value>
   </greater-than>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

      </and>
    </condition>
    <emission>
      <red>0.35</red>
      <green>0.1</green>
      <blue>0.1</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>


    <animation>
    <type>pick</type>
    <object-name>Button</object-name>
    <action>
      <name>Toggle</name>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/takeoff-monitor/armed</property>
      </binding>
          <binding>
        <command>property-toggle</command>
        <property>/instrumentation/generic/click</property>
      </binding>
      </action>
    </animation>
      <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame.001</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

  <animation>
    <type>material</type>
    <object-name>Label1</object-name>
    <object-name>Label2</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>

</PropertyList>
