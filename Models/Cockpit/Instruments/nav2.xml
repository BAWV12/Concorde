<?xml version="1.0"?>
<PropertyList>
  <path>../Models/radioselector.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
  <object-name>Freq1</object-name>
  <object-name>Freq2</object-name>
  <object-name>Freq3</object-name>
  <object-name>Freq4</object-name>
  <object-name>Freq5</object-name>
  <object-name>Plane</object-name>
</effect>


 <animation>
  <name>NAV2Bulbs</name>
  <object-name>FreqSelectBig.001</object-name>
  <object-name>Freq1</object-name>
  <object-name>Freq2</object-name>
  <object-name>Freq3</object-name>
  <object-name>Freq4</object-name>
  <object-name>Freq5</object-name>
  <object-name>Plane</object-name>
 </animation>


 <animation>
  <type>material</type>
  <object-name>NAV2Bulbs</object-name>
  <condition>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>

  </condition>

  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>

  <animation>
    <type>rotate</type>
    <object-name>FreqSelectBig</object-name>
    <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
    <factor>180</factor>
    <center>
      <x-m>0.00850</x-m>
      <y-m>-0.01378</y-m>
      <z-m>-0.0200</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>


  <animation>
    <type>pick</type>
    <object-name>FreqSelectBig</object-name>
    <action>
      <name>Frequency 1 Up</name>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
        <step>0.05</step>
        <min>108</min>
        <max>118</max>
        <wrap>false</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
      </binding>
    </action>
    <action>
      <name>Frequency 1 Down</name>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
        <step>-0.05</step>
        <min>108</min>
        <max>118</max>
        <wrap>false</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
      </binding>
    </action>
  </animation>
  <!-- Freq Display -->
  <animation>
    <type>textranslate</type>
    <object-name>Freq1</object-name>
    <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
    <bias>0.0001</bias>
    <factor>.001</factor>
    <step>100</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>Freq2</object-name>
    <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
    <bias>0.0001</bias>
    <factor>.01</factor>
    <step>10</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>Freq3</object-name>
    <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
    <bias>0.0001</bias>
    <factor>.1</factor>
    <step>1</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>Freq4</object-name>
    <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
    <bias>0.0001</bias>
    <factor>1</factor>
    <step>.1</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>Freq5</object-name>
    <property>instrumentation/nav[2]/frequencies/selected-mhz</property>
    <bias>0.0001</bias>
    <factor>10</factor>
    <step>.01</step>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
</PropertyList>
