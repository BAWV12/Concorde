<?xml version="1.0"?>
<PropertyList>
  <path>../Models/cog.ac</path>

 <params>
  <serviceable>/instrumentation/cg[0]/serviceable</serviceable>
 </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
    <object-name>AlarmOn</object-name>
    <object-name>AlarmOff</object-name>
</effect>

  <animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
      <or>
	<not><property alias="/params/serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </condition>    
  </animation>

  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>    

    <type>translate</type>
    <object-name>CG</object-name>
    <property>/instrumentation/cg[0]/percent</property>
    <interpolation>
      <entry>
        <ind>50</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>61</ind>
        <dep>-.0735</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>    

    <type>translate</type>
    <object-name>FWD</object-name>
    <property>/instrumentation/cg[0]/min-percent</property>
    <interpolation>
      <entry>
        <ind>50</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>61</ind>
        <dep>-.0735</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
      <or>
	<not><property alias="/params/serviceable"/></not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
      </or>
    </not></condition>    

    <type>translate</type>
    <object-name>AFT</object-name>
    <property>/instrumentation/cg[0]/max-percent</property>
    <interpolation>
      <entry>
        <ind>50</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>61</ind>
        <dep>-.0735</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>AlarmOn</object-name>
    <condition>
     <and>
      <or>
        <greater-than>
          <property>/instrumentation/cg[0]/percent</property>
          <property>/instrumentation/cg[0]/max-percent</property>
        </greater-than>
        <less-than>
          <property>/instrumentation/cg[0]/percent</property>
          <property>/instrumentation/cg[0]/min-percent</property>
        </less-than>
      </or>
      <property alias="/params/serviceable"/>
      <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>AlarmOff</object-name>
    <condition>
      <not>
        <or>
          <greater-than>
            <property>/instrumentation/cg[0]/percent</property>
            <property>/instrumentation/cg[0]/max-percent</property>
          </greater-than>
          <less-than>
            <property>/instrumentation/cg[0]/percent</property>
            <property>/instrumentation/cg[0]/min-percent</property>
          </less-than>
        </or>
      </not>
    </condition>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
  <animation>
    <type>material</type>
    <object-name>CG</object-name>
    <object-name>FWD</object-name>
    <object-name>AFT</object-name>
    <object-name>Guage</object-name>
    <object-name>FF</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
</PropertyList>
