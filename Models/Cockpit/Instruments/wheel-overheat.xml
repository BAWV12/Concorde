<?xml version="1.0"?>
<PropertyList>
  <path>../Models/wheel-overheat.ac</path>
  <animation>
    <type>material</type>
    <object-name>WheelOverheat</object-name>
    <condition>
        <greater-than>
         <property>/systems/brakes/temperature-degc</property>
         <value>220</value>
        </greater-than>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <condition>
	<greater-than>
	  <property>systems/lighting/level/roof</property>
	  <value>0</value>
	</greater-than>
  </condition>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
   <factor-prop>systems/lighting/level/roof</factor-prop>
  </emission>
 </animation>
</PropertyList>
