<?xml version="1.0"?>
<PropertyList>
  <path>../Models/wheel-overheat.ac</path>
  <animation>
    <type>material</type>
    <object-name>WheelOverheat</object-name>
    <condition>
        <greater-than>
         <property>/systems/brakes/temperature-degc</property>
         <value>220</value>
        </greater-than>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.01</red>
      <green>0.005</green>
      <blue>0.005</blue>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>
</PropertyList>
