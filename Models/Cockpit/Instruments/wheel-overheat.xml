<?xml version="1.0"?>
<PropertyList>
  <path>../Models/wheel-overheat.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>
    <object-name>LightFrame</object-name>
    <object-name>WheelOverheat</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>WheelOverheat</object-name>
    <condition>
     <and>
       <greater-than>
         <property>/systems/electrical/outputs/specific</property>
         <value>20.0</value>
       </greater-than>
       <or>
	 <property>/controls/lighting/crew/captain/test</property>	
         <greater-than>
           <property>/systems/brakes/temperature-degc</property>
           <value>220</value>
         </greater-than>
       </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
