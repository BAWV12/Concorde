<?xml version="1.0"?>
<PropertyList>
  <path>../Models/wheel-overheat.ac</path>
  <animation>
    <type>material</type>
    <object-name>WheelOverheat</object-name>
    <condition>
     <and>
       <greater-than>
         <property>/systems/electrical/outputs/specific</property>
         <value>20.0</value>
       </greater-than>
       <or>
	 <property>/controls/lighting/crew/captain/test</property>	
         <greater-than>
           <property>/systems/brakes/temperature-degc</property>
           <value>220</value>
         </greater-than>
       </or>
     </and>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
   <red>0.66</red>
   <green>0.68</green>
   <blue>0.64</blue>
      <factor-prop>systems/lighting/level/panel/main</factor-prop>
  </emission>
 </animation>
</PropertyList>
