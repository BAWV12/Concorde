    <!-- control the emisssion and transparency to get something that looks right -->
    <animation>
        <type>material</type>
        <object-name>FlameModel</object-name>
        <emission>
            <red>1.0</red>
            <green>0.5</green>
            <blue>0.0</blue>
                <property>engines/engine[3]/augmentation</property>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>FlameModelBurn</object-name>
        <emission>
            <red>1</red>
            <green>0.78</green>
            <blue>0.67</blue>
                <property>engines/engine[3]/augmentation</property>
        </emission>
   </animation>

    <animation>
        <type>material</type>
        <object-name>FlameTrail</object-name>
        <object-name>FlameModel</object-name>

        <ambient>
            <red-prop>rendering/scene/diffuse/red</red-prop>
            <green-prop>rendering/scene/diffuse/red</green-prop>
            <blue-prop>rendering/scene/diffuse/red</blue-prop>
            <factor>-1</factor>
            <offset>1.0</offset>
        </ambient>
        <transparency>
            <alpha-prop>rendering/scene/diffuse/red</alpha-prop>
            <factor>-0.8</factor>
            <offset>1.0</offset>
        </transparency>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
                <property>engines/engine[3]/augmentation</property>
        </emission>
    </animation>

</PropertyList>
