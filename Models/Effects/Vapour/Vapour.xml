<PropertyList>
    <params>
	    <aoa>orientation/alpha-deg</aoa>
    </params>

    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>


	<particlesystem>
	<name>vertical-climb-vapour</name>
	<texture>vapour.png</texture>

	<emissive type="bool">false</emissive>
	<lighting type="bool">false</lighting>

	<condition>
	  <and>
		<or>
		<greater-than>
		<property>velocities/true-airspeed-kt</property>
		<value>130</value>
		</greater-than>
		<greater-than>
		<property>velocities/airspeed-kt</property>
		<value>130</value>
		</greater-than>
		</or>
		<greater-than>
		<property>orientation/alpha-deg</property>
		<value>8</value>
		</greater-than>
	  </and>
	</condition>

	<attach>world</attach>

	<placer>
	<type>segments</type> 
	<segments>
	<vertex>
	<x-m>-3.70573</x-m>
	<y-m>-1.5798</y-m>
	<z-m>0</z-m>
	</vertex>
	<vertex>
	<x-m>-3.70573</x-m>
	<y-m>1.5798</y-m>
	<z-m>0</z-m>
	</vertex>
	
	<vertex>
	<x-m>-0.240778</x-m>
	<y-m>-2.18808</y-m>
	<z-m>0</z-m>
	</vertex>
	<vertex>
	<x-m>-0.240778</x-m>
	<y-m>2.18808</y-m>
	<z-m>0</z-m>
	</vertex>
	
	<vertex>
	<x-m>2.84437</x-m>
	<y-m>-2.86034</y-m>
	<z-m>0</z-m>
	</vertex>
	<vertex>
	<x-m>2.84437</x-m>
	<y-m>2.86034</y-m>
	<z-m>0</z-m>
	</vertex>
	</segments>
	</placer>


	<shooter>
		<theta-min-deg>-1.5</theta-min-deg>
		<theta-max-deg>1.5</theta-max-deg>
		<phi-min-deg>-1.5</phi-min-deg>
		<phi-max-deg>1.5</phi-max-deg>
		<speed-mps>
			<value>0</value>
			<spread>10</spread>
		</speed-mps>
		<rotation-speed>
			<x-min-deg-sec>0</x-min-deg-sec>
			<y-min-deg-sec>0</y-min-deg-sec>
			<z-min-deg-sec>0</z-min-deg-sec>
			<x-max-deg-sec>0</x-max-deg-sec>
			<y-max-deg-sec>0</y-max-deg-sec>
			<z-max-deg-sec>0</z-max-deg-sec>
		</rotation-speed>
	</shooter>

	<counter>
		<particles-per-sec>
			<value>200</value>
			<spread>15</spread>
		</particles-per-sec>
	</counter>
	
	<align>billboard</align>

	<particle>
		<start>
			<color>
				<red><property>/rendering/scene/diffuse/red</property></red>
				<green><property>/rendering/scene/diffuse/red</property></green>
				<blue><property>/rendering/scene/diffuse/red</property></blue>
				<alpha><value> 0.1 </value></alpha>
			</color>
			<size>

<expression>
<product>
<dif>
<property>orientation/alpha-deg</property>
<value>5</value>
</dif>
<value>0.7</value>
</product>
</expression>
			</size>
		</start>

		<end>
			<color>
				<red><property>/rendering/scene/diffuse/red</property></red>
				<green><property>/rendering/scene/diffuse/red</property></green>
				<blue><property>/rendering/scene/diffuse/red</property></blue>
				<alpha><value> 0.1 </value></alpha>
			</color>
			<size>
				<value>0.1</value>
			</size>
		</end>

		<life-sec>
			<value>0.01</value>
		</life-sec>
		<mass-kg>0.00001</mass-kg>
		<radius-m>0.001</radius-m>
	</particle>

	<program>
		<fluid>air</fluid>
		<gravity type="bool">true</gravity>
		<wind typ="bool">false</wind>
	</program>
	
    </particlesystem>
	
</PropertyList>
