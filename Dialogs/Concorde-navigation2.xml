<?xml version="1.0"?>

<PropertyList>
  <name>Concorde-navigation2</name>
  <layout>vbox</layout>
  <width>950</width>
  
  <nasal>
   <open>
    globals.Concorde.engineercrew.ordernavaidexport();
   </open>
  </nasal>

  <text>
    <label>Concorde navigation 2</label>
  </text>

  <hrule><dummy/></hrule>

  <text>
   <label>Historical destinations</label>
   <color>
    <red>0.5</red>
    <green>0.5</green>
    <blue>0.5</blue>
   </color>
  </text>

  <text>
   <label>(in Nasal/Concorde-route.xml)</label>
   <color>
    <red>0.5</red>
    <green>0.5</green>
    <blue>0.5</blue>
   </color>
  </text>

  <text>
   <label></label>
  </text>

  <group>
    <layout>hbox</layout>

    <group>
      <layout>vbox</layout>
 
      <text>
       <label>Sort by  ~</label>
       <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
       </color>
      </text>

      <group>
       <layout>vbox</layout>
      
       <radio>
        <label>id</label>
        <halign>left</halign>
        <property>/controls/human/destination/sort/ident</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/ident</property>
         <value>true</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/name</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/distance</property>
         <value>false</value>
        </binding>
        <binding>
          <command>nasal</command>
          <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
          <command>dialog-update</command>
          <object-name>destination-list</object-name>
        </binding>
       </radio>

       <radio>
        <label>name</label>
        <halign>left</halign>
        <property>/controls/human/destination/sort/name</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/name</property>
         <value>true</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/ident</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/distance</property>
         <value>false</value>
        </binding>
        <binding>
          <command>nasal</command>
          <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
          <command>dialog-update</command>
          <object-name>destination-list</object-name>
        </binding>
       </radio>

       <radio>
        <label>distance from position</label>
        <halign>left</halign>
        <property>/controls/human/destination/sort/distance</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/name</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/ident</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/sort/distance</property>
         <value>true</value>
        </binding>
        <binding>
          <command>nasal</command>
          <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
          <command>dialog-update</command>
          <object-name>destination-list</object-name>
        </binding>
       </radio>
      </group>

      <text>
       <label>* navaid not available</label>
       <halign>left</halign>
       <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
       </color>
      </text>
    </group>
      
    <list>
      <halign>left</halign>
      <pref-width>500</pref-width>
      <pref-height>300</pref-height>
      <property>/systems/human/dialog</property>
      <properties>/systems/human/list</properties>
      <name>destination-list</name>
    </list>

    <group>
      <layout>vbox</layout>

      <text>
       <label>Service  ~</label>
       <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
       </color>
      </text>

      <radio>
        <halign>left</halign>  
        <label>regular</label>
        <property>/controls/human/destination/category/regular</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/regular</property>
         <value>true</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/diversion</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/historical</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/other</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/everything</property>
         <value>false</value>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </radio>

      <radio>
        <halign>left</halign>
        <label>diversion BA</label>
        <property>/controls/human/destination/category/diversion</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/diversion</property>
         <value>true</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/regular</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/historical</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/other</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/everything</property>
         <value>false</value>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </radio>

      <radio>
        <halign>left</halign>
        <label>historical</label>
        <property>/controls/human/destination/category/historical</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/historical</property>
         <value>true</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/regular</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/diversion</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/other</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/everything</property>
         <value>false</value>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </radio>

      <radio>
        <halign>left</halign>
        <label>other</label>
        <property>/controls/human/destination/category/other</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/other</property>
         <value>true</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/regular</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/diversion</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/historical</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/everything</property>
         <value>false</value>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </radio>

      <radio>
        <halign>left</halign>
        <label>everything</label>
        <color>
         <red>0.5</red>
         <green>0.5</green>
         <blue>0.5</blue>
        </color>
        <property>/controls/human/destination/category/everything</property>
        <live>true</live>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/everything</property>
         <value>true</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/regular</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/diversion</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/historical</property>
         <value>false</value>
        </binding>
        <binding>
         <command>property-assign</command>
         <property>/controls/human/destination/category/other</property>
         <value>false</value>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </radio>
    </group>
  </group>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>

    <group>
      <layout>vbox</layout>

      <text>
       <label>Filter  ~</label>
       <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
       </color>
      </text>

      <checkbox>
        <halign>left</halign>
        <label>within 200 NM</label>
        <property>/controls/human/destination/filter/range</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/human/destination/filter/range</property>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </checkbox>

      <checkbox>
        <halign>left</halign>
        <label>with navaid</label>
        <property>/controls/human/destination/filter/navaid</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/human/destination/filter/navaid</property>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </checkbox>

      <text>
       <label></label>
      </text>
    </group>

    <group>
      <layout>vbox</layout>

      <checkbox>
        <halign>left</halign>
        <label>show destination name  ~</label>
        <property>/controls/human/destination/show</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/human/destination/show</property>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </checkbox>

      <checkbox>
        <halign>left</halign>
        <label>log unknown id</label>
        <color>
         <red>0.5</red>
         <green>0.5</green>
         <blue>0.5</blue>
        </color>
        <property>/controls/human/destination/unknown</property>
        <binding>
         <command>property-toggle</command>
         <property>/controls/human/destination/unknown</property>
        </binding>
        <binding>
         <command>nasal</command>
         <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
        </binding>
        <binding>
         <command>dialog-update</command>
         <object-name>destination-list</object-name>
        </binding>
      </checkbox>
    </group>
  </group>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>

    <button>
      <legend>Back</legend>
      <key>b</key>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Concorde-navigation</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Refresh</legend>
      <key>r</key>
      <binding>
        <command>nasal</command>
        <script>globals.Concorde.engineercrew.ordernavaidexport();</script>
      </binding>
      <binding>
        <command>dialog-update</command>
        <object-name>destination-list</object-name>
      </binding>
    </button>

    <button>
      <legend>Select</legend>
      <key>s</key>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>nasal</command>
        <script>globals.Concorde.engineercrew.getnavaidexport();</script>
      </binding>
      <binding>
       <command>dialog-show</command>
       <dialog-name>Concorde-navigation</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>
</PropertyList>
