<?xml version="1.0"?>

<PropertyList>
  <name>Concorde-procedures3</name>
  <layout>vbox</layout>
  <width>600</width>


  <text>
    <label>Concorde procedures</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
      <label>Emergency procedures</label>
    </text>

    <text>
      <label>(2 virtual crew members required)</label>
      <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
      </color>
    </text>

    <text>
      <label></label>
    </text>

    <group>
     <layout>hbox</layout>

     <text>
       <label>processing :</label>
     </text>

     <text>
      <live>true</live>
      <property>/systems/voice/display/processing</property>
      <halign>left</halign>
      <color>
       <red>0.8</red>
       <green>0.2</green>
       <blue>0.2</blue>
      </color>
     </text>
    </group>

    <group>
     <layout>hbox</layout>

     <text>
       <label>completed :</label>
     </text>

     <text>
      <live>true</live>
      <property>/systems/voice/display/completed</property>
      <halign>left</halign>
      <color>
       <red>0.2</red>
       <green>0.8</green>
       <blue>0.2</blue>
      </color>
     </text>
    </group>

    <text>
      <label></label>
    </text>

    <group>
     <layout>hbox</layout>

     <text>
       <label>copilot :</label>
     </text>

     <text>
      <live>true</live>
      <property>/systems/copilot/state-last</property>
      <halign>left</halign>
      <color>
       <red>0.2</red>
       <green>0.8</green>
       <blue>0.2</blue>
      </color>
     </text>
    </group>

    <group>
     <layout>hbox</layout>

     <text>
       <label>engineer :</label>
     </text>

     <text>
      <live>true</live>
      <property>/systems/engineer/state-last</property>
      <halign>left</halign>
      <color>
       <red>0.2</red>
       <green>0.8</green>
       <blue>0.2</blue>
      </color>
     </text>
    </group>

    <text>
      <label></label>
    </text>

    <text>
      <label></label>
    </text>

    <group>
     <layout>hbox</layout>

     <group>
      <layout>vbox</layout>

      <button>
       <legend>Four engine flame out (&gt; Mach 1.2)</legend>
       <binding>
         <command>nasal</command>
         <script>globals.Concorde.voicecrew.fourengineflameoutmach1export();</script>
       </binding>
      </button>

      <button>
       <legend>Four engine flame out (&lt; Mach 1.2)</legend>
       <binding>
         <command>nasal</command>
         <script>globals.Concorde.voicecrew.fourengineflameoutexport();</script>
       </binding>
      </button>
     </group>
    </group>
  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
    <legend>Back</legend>
    <key>b</key>
    <binding>
     <command>dialog-show</command>
     <dialog-name>Concorde-menu</dialog-name>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

   <button>
    <legend>Close</legend>
    <default>true</default>
    <key>Esc</key>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

   <button>
    <legend>Settings</legend>
    <key>s</key>
    <binding>
     <command>dialog-show</command>
     <dialog-name>Concorde-procedures4</dialog-name>
    </binding>
    <binding>
     <command>dialog-close</command>
    </binding>
   </button>

   <button>
    <legend>Page 1</legend>
    <key>p</key>
    <binding>
     <command>dialog-show</command>
     <dialog-name>Concorde-procedures</dialog-name>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>
  </group>
</PropertyList>
