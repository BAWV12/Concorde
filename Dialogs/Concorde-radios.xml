 <group>

  <button>
   <x>75</x>
   <y>10</y>
   <legend>Back</legend>
   <equal>true</equal>
   <key>b</key>
   <binding>
    <command>dialog-show</command>
    <dialog-name>Concorde-menu</dialog-name>
   </binding>
   <binding>
    <command>dialog-close</command>
   </binding>
  </button>

  <button>
   <x>175</x>
   <y>10</y>
   <legend>Close</legend>
   <default>true</default>
   <equal>true</equal>
   <key>Esc</key>
   <binding>
    <command>dialog-apply</command>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
   <binding>
    <command>dialog-close</command>
   </binding>
  </button>

  <button>
   <x>375</x>
   <y>10</y>
   <legend>Reset</legend>
   <equal>true</equal>
   <key>r</key>
   <binding>
    <command>dialog-update</command>
   </binding>
  </button>

  <button>
   <x>475</x>
   <y>10</y>
   <legend>Apply</legend>
   <equal>true</equal>
   <key>a</key>
   <binding>
    <command>dialog-apply</command>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
