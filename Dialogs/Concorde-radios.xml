<?xml version="1.0"?>

<!-- - NAV 0 is reserved for autopilot.
     - ADF 2 doesn't not exist by default.
-->

<PropertyList>

 <name>Concorde-radios</name>
 <width>600</width>
 <height>330</height>
 <modal>false</modal>

 <text>
  <x>10</x>
  <y>300</y>
  <label>Concorde Frequencies</label>
 </text>

