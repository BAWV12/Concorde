<PropertyList>

 <name>Dial VOR 1 heading</name>
 <w-base>100</w-base>
 <h-base>100</h-base>

 <params>
  <radial-ctrl>/instrumentation/nav[1]/radials/selected-deg</radial-ctrl>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.png</path>
   </texture>
    <w>74</w>
    <h>35</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>13</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>AP heading display</name>
   <type>text</type>
   <font>led</font>
   <point-size>7.5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/radial-ctrl"/>
     <format>%03.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-2</offset>
    </transformation>
   </transformations>
  </layer>

