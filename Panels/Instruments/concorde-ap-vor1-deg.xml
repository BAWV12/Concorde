 </layers>

 <actions>

  <action>
   <name>Minus 10</name>
   <button>0</button>
   <x>1</x>
   <y>-40</y>
   <w>14</w>
   <h>14</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/radial-ctrl"/>
    <step>-10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <x>1</x>
   <y>-28</y>
   <w>14</w>
   <h>14</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/radial-ctrl"/>
    <step>10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

  <action>
   <name>Minus 1</name>
   <button>0</button>
   <x>15</x>
   <y>-40</y>
   <w>14</w>
   <h>14</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/radial-ctrl"/>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

  <action>
   <name>Plus 1</name>
   <button>0</button>
   <x>15</x>
   <y>-28</y>
   <w>14</w>
   <h>14</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/radial-ctrl"/>
    <step>1</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apsendnavexport();</script>
   </binding>
  </action>

 </actions>

</PropertyList>
