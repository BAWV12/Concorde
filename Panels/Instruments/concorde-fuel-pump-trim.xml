<?xml version="1.0"?>

<!-- Fuel pump switch :

     - with auto trim.
-->

<PropertyList>

 <name>Fuel pump</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <pump-switch>/controls/fuel/tank[10]/pump-on[0]</pump-switch>
  <auto-switch>/controls/fuel/tank[10]/pump-auto[0]</auto-switch>
 </params>


 <layers>

  <layer>
   <name>Fuel pump</name>
   <type>switch</type>

   <layer include="concorde-switch-3rd.xml">
    <name>auto</name>
    <condition>
     <property alias="../../../../../params/auto-switch"/>
    </condition>
   </layer>

   <layer include="concorde-switch-on.xml">
    <name>on</name>
    <condition>
     <property alias="../../../../../params/pump-switch"/>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AUTO</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-40</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-36</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-35</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle pump</name>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/pump-switch"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle auto trim</name>
   <button>1</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/auto-switch"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
