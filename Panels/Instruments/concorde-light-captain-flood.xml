<?xml version="1.0"?>

<!-- Concorde captain and center dash panels flood lighting.

-->

<PropertyList>
 <name>Captain/center dash panels flood lighting</name>
 <w-base>135</w-base>
 <h-base>108</h-base>


 <layers>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-51</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>1</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>LH AND CENTRE</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-53</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-32</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title line 2</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DASH FLOOD</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-41</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-47</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>knob rotation</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/navcom-radios.png</path>
    <x1>0.53125</x1>
    <x2>0.59765625</x2>
    <y1>0.05859375</y1>
    <y2>0.1484375</y2>
   </texture>
   <w>48</w>
   <h>60</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>9</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>9</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <property>/controls/lighting/crew/captain/flood-norm</property>
     <scale>135</scale>
     <offset>-90</offset>      <!-- off -->
    </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>decrease lighting</name>
   <button>0</button>
   <x>-40</x>
   <y>-17</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/lighting/crew/captain/flood-norm</property>
    <step>-0.2</step>
    <min>0</min>
    <max>1</max>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.lightingsystem.floodexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>increase lighting</name>
   <button>0</button>
   <x>10</x>
   <y>-17</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/lighting/crew/captain/flood-norm</property>
    <step>0.2</step>
    <min>0</min>
    <max>1</max>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.lightingsystem.floodexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
