<?xml version="1.0"?>

<!-- Alarm on air bleed duct :

     - temperature downstream of cold air unit exceeds 120Â°C.
-->

<PropertyList>
 <name>Alarm on Air bleed duct</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <param>
  <duct-select>/systems/temperature/group[0]/duct-degc</duct-select>
 </param>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-center.xml"/>
       <less-than>
        <property>/systems/temperature/group[0]/duct-degc</property>
        <value>120.0</value>
       </less-than>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-duct.png</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <condition include="concorde-cond-light-eng-center.xml"/>
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-duct.png</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
