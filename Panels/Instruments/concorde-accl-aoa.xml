<?xml version="1.0"?>

<!-- Accelorometer and AOA :

     - TODO : the real AoA is a white moving tape.
-->

<PropertyList>

 <name>G and AOA display</name>
 <w-base>63</w-base>
 <h-base>275</h-base>

 <params>
  <serviceable>/instrumentation/accelerometer-aoa[0]/serviceable</serviceable>
  <failure-flag>/instrumentation/accelerometer-aoa[0]/failure-flag</failure-flag>
  <g-sel>/instrumentation/accelerometer-aoa[0]/g</g-sel>
  <aoa-sel>/instrumentation/accelerometer-aoa[0]/alpha-deg</aoa-sel>
 </params>


 <layers>



  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-accl-aoa.png</path>
    <x1>0.42</x1>
    <y1>0.0</y1>
    <x2>0.60</x2>
    <y2>1.0</y2>
   </texture>
    <w>35</w>
    <h>187</h>
  </layer>

  <layer>
   <name>g index</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/hsi2.png</path>
    <x1>0.8465625</x1>
    <x2>0.948125</x2>
    <y1>0.449375</y1>
    <y2>0.5375</y2>
   </texture>
   <w>10</w>
   <h>10</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <offset>-90</offset> <!-- horizontal right -->
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>13</offset> <!-- aligned left -->
    </transformation> 
    <transformation>
     <type>x-shift</type>
     <offset>-9</offset> <!-- 1 g -->
    </transformation> 
    <transformation>
     <condition>
      <and include="concorde-cond-voltage-inst.xml">
       <property alias="../../../../../../../params/serviceable"/>
      </and>
     </condition>
     <type>x-shift</type>
     <property>/fdm/jsbsim/accelerations/Nz</property>
     <min>-1.0</min>
     <max>3.5</max>
     <scale>1.0</scale>
     <interpolation> <!-- index must increase, because of lookup ! -->
      <entry><ind>-1.0</ind><dep>-63.0</dep></entry>
      <entry><ind> 1.0</ind><dep>  0.0</dep></entry>
      <entry><ind> 3.5</ind><dep> 82.0</dep></entry>
      </interpolation>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Aoa moving tape</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/hsi2.png</path>
    <x1>0.8465625</x1>
    <x2>0.948125</x2>
    <y1>0.449375</y1>
    <y2>0.5375</y2>
   </texture>
   <w>10</w>
   <h>10</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <offset>90</offset> <!-- horizontal left -->
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>13</offset> <!-- aligned right -->
    </transformation> 
    <transformation>
     <condition>
      <and include="concorde-cond-voltage-inst.xml">
       <property alias="../../../../../../../params/serviceable"/>
      </and>
     </condition>
     <type>x-shift</type>
     <property alias="../../../../../params/aoa-sel"/>
     <min>-5.0</min>
     <max>25.0</max>
     <scale>1.0</scale>
     <interpolation> <!-- index must increase, because of lookup ! -->
      <entry><ind>-5.0</ind><dep> 75.0</dep></entry>
      <entry><ind>10.0</ind><dep>  0.0</dep></entry>
      <entry><ind>25.0</ind><dep>-75.0</dep></entry>
      </interpolation>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>OFF flag</name>
   <condition>
    <property alias="../../../../params/failure-flag"/>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
    <x1>0.9375</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>0.546875</y2>
   </texture>
   <w>20</w>
   <h>6</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>14</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>OFF flag 2</name>
   <condition>
    <property alias="../../../../params/failure-flag"/>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
    <x1>0.9375</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>0.546875</y2>
   </texture>
   <w>20</w>
   <h>6</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>2</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-36</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
