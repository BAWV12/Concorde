<?xml version="1.0"?>

<!-- Ground relief valve
-->

<PropertyList>
 <name>Ground relief Valve</name>
 <w-base>84</w-base>
 <h-base>168</h-base>


 <layers>

  <layer>
   <name>valve</name>
   <type>switch</type>

   <layer>
    <name>undefined</name>
    <condition>
     <not>
      <property>/systems/electrical/power/specific</property>
     </not>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-hatched-bg.png</path>
    </texture>
    <w>28</w>
    <h>28</h>
   </layer>

   <layer>
    <name>shut</name>
    <condition>
     <not>
      <property>/systems/pressurization/valve/ground-relief</property>
     </not>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-shut.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>28</w>
    <h>28</h>
   </layer>

   <layer>
    <name>open</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-open.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>28</w>
    <h>28</h>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>25</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>GROUND</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>75</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 2</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>PRESSURE</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>60</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>RELIEF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>45</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 4</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>VALVE</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
