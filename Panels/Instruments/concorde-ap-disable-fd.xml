<?xml version="1.0"?>

<!-- Disable flight director :

     - group works by offset from previous layer inside group, except 1st layer which is absolute.
-->


<PropertyList>

 <name>Disable flight director</name>
 <w-base>104</w-base>
 <h-base>416</h-base>

 <params>
  <flight-director>/controls/autoflight/flight-director[0]/engage</flight-director>
 </params>


 <layers>

  <layer>
   <name>inside</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.png</path>
    <x1>0.7</x1>
    <y1>0.8</y1>
    <x2>1.0</x2>
    <y2>0.9</y2>
   </texture>
   <w>60</w>
   <h>150</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>70</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Switch</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <property alias="../../../../../params/flight-director"/>
    </condition>

    <layer>
     <name>switch enabled</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
     </texture>
     <w>104</w>
     <h>78</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>1</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>125</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>Title enabled</name>
     <type>text</type>
     <point-size>46</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>FD</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-29</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-20</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>
    <layer>
     <name>switch off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
     </texture>
     <w>104</w>
     <h>78</h>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>1</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>25</offset>
      </transformation>
     </transformations>
    </layer>
    <layer>
     <name>Title</name>
     <type>text</type>
     <point-size>46</point-size>
     <color>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>literal</type>
       <text>FD</text>
      </chunk>
     </chunks>
     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>-29</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-20</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
  </layer>

 </layers>
 
 <actions>

  <action>
   <desc>Toggle flight director</desc>
   <condition include="concorde-cond-voltage-autopilot.xml"/>
   <button>0</button>
   <x>-52</x>
   <y>-20</y>
   <w>104</w>
   <h>185</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/flight-director"/>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.fdexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
