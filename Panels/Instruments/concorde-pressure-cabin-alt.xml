<!-- Cabin altitude indicator :

     - energy provided by cabin pressure (no voltage).
-->

<PropertyList>
 <name>Cabine altitude</name>
 <w-base>128</w-base>
 <h-base>128</h-base>

 <layers>

  <layer include="concorde-gauge.xml"/>

  <layer>
   <name>background</name>
   <w>110</w>
   <h>110</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-cabin-alt.png</path>
    <x1>0</x1>
    <y1>0</y1>
    <x2>1</x2>
    <y2>1</y2>
   </texture>
  </layer>

  <layer>
   <name>needle</name>
   <w>6</w>
   <h>48</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
    <x1>0.8</x1>
    <y1>0.78125</y1>
    <x2>0.8375</x2>
    <y2>1.0</y2>
   </texture>
   <transformations>
    <transformation>
     <type>rotation</type>
     <condition>
      <and>
       <property>/instrumentation/cabin-altitude/serviceable</property>
       <less-than-equals>
        <property>/instrumentation/cabin-altitude/indicated-altitude-ft</property>
        <value>20000</value>
       </less-than-equals>
      </and>
     </condition>
     <property>/instrumentation/cabin-altitude/indicated-altitude-ft</property>
     <scale>0.0072</scale>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <condition>
      <and>
       <property>/instrumentation/cabin-altitude/serviceable</property>
       <greater-than>
        <property>/instrumentation/cabin-altitude/indicated-altitude-ft</property>
        <value>20000</value>
       </greater-than>
       <less-than-equals>
        <property>/instrumentation/cabin-altitude/indicated-altitude-ft</property>
        <value>40000</value>
       </less-than-equals>
      </and>
     </condition>
     <property>/instrumentation/cabin-altitude/indicated-altitude-ft</property>
     <scale>0.0036</scale>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <condition>
      <and>
       <property>/instrumentation/cabin-altitude/serviceable</property>
       <greater-than>
        <property>/instrumentation/cabin-altitude/indicated-altitude-ft</property>
        <value>40000</value>
       </greater-than>
      </and>
     </condition>
     <property>/instrumentation/cabin-altitude/indicated-altitude-ft</property>
     <scale>0.0018</scale>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>20.0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.png</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>128</w>
   <h>128</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>
</PropertyList>
