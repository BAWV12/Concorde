<?xml version="1.0"?>

<!-- Fault on disconnected battery.
-->

<PropertyList>
 <name>Fault on disconnected battery</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <master-bat>/controls/electric/dc/master-bat[0]</master-bat>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Fault light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-aft.xml"/> <!-- bug -->
       <property alias="../../../../../../../params/master-bat"/>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-batt-isolate.png</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <condition include="concorde-cond-light-eng-aft.xml"/>
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-batt-isolate.png</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
