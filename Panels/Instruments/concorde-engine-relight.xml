<?xml version="1.0"?>

<!-- Concorde emergency relight selector.

-->

<PropertyList>
 <name>Emergency relight selector</name>
 <w-base>108</w-base>
 <h-base>108</h-base>


 <layers>

<!-- SELECTOR -->

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>EMERG RELIGHT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-54</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>65</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title line 2</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>BUSBAR</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-24</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>45</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>25</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title engine 2</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>2</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>21</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>21</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title engine 4</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>4</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>37</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title engine 3</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>3</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>45</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-18</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title engine 1</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>1</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-42</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>knob rotation</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/navcom-radios.png</path>
    <x1>0.53125</x1>
    <x2>0.59765625</x2>
    <y1>0.05859375</y1>
    <y2>0.1484375</y2>
   </texture>
   <w>48</w>
   <h>60</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <property>/controls/electric/ac/emergency/relight-selector</property>
     <min>0</min>
     <max>4</max>
     <scale>30</scale>
     <offset>0</offset>
    </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>selector left</name>
   <button>0</button>
   <x>-50</x>
   <y>-50</y>
   <w>50</w>
   <h>100</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/electric/ac/emergency/relight-selector</property>
    <step>-1</step>
    <min>0</min>
    <max>4</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.electricalsystem.emergencyrelightexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>selector right</name>
   <button>0</button>
   <x>0</x>
   <y>-50</y>
   <w>50</w>
   <h>100</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/electric/ac/emergency/relight-selector</property>
    <step>1</step>
    <min>0</min>
    <max>4</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.electricalsystem.emergencyrelightexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
