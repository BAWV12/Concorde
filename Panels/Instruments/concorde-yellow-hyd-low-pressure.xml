<?xml version="1.0"?>

<!-- Low pressure of hydraulical reservoir. 
-->

<PropertyList>
 <name>Warning on low pressure</name>
 <w-base>52</w-base>
 <h-base>104</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
    <name>Warning light</name>
    <type>switch</type>

    <layer>
     <name>off</name>
     <type>group</type>
     <condition>
      <or include="concorde-cond-voltage-bulb.xml">
       <or include="concorde-cond-test-eng-aft.xml"/>
      </or>
     </condition>

     <layer include="concorde-bulb-off.xml">
      <w>104</w>
      <h>52</h>
     </layer>
     <layer>
      <name>background off</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-l-press.png</path>
       <x1>0.0</x1>
       <y1>0.25</y1>
       <x2>1.0</x2>
       <y2>0.75</y2>
      </texture>
      <w>104</w>
      <h>52</h>
     </layer>
    </layer>

    <layer>
     <name>on</name>
     <type>group</type>

     <layer include="concorde-bulb-on.xml">
      <condition include="concorde-cond-light-eng-aft.xml"/>
      <w>104</w>
      <h>52</h>
     </layer>
     <layer>
      <name>background on</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-l-press.png</path>
       <x1>0.0</x1>
       <y1>0.25</y1>
       <x2>1.0</x2>
       <y2>0.75</y2>
      </texture>
      <w>104</w>
      <h>52</h>
      <emissive>true</emissive>
     </layer>
    </layer>
    <transformations>
     <transformation>
      <type>rotation</type>
      <offset>90</offset>
     </transformation>
    </transformations>
  </layer>

 </layers>

</PropertyList>
