<?xml version="1.0"?>

<!-- Hydraulical green fuel pump switch :

     - with auto trim.
-->

<PropertyList>

 <name>Green fuel pump</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <pump-switch>/controls/fuel/tank[10]/pump-green-on</pump-switch>
  <auto-switch>/controls/fuel/tank[10]/pump-green-auto</auto-switch>
 </params>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-fuel-pump.png</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
   </texture>
   <w>75</w>
   <h>75</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Fuel pump</name>
   <type>switch</type>

   <layer include="concorde-switch-3rd.xml">
    <name>auto</name>
    <condition>
     <property alias="../../../../../params/auto-switch"/>
    </condition>
   </layer>

   <layer include="concorde-switch-on.xml">
    <name>on</name>
    <condition>
     <property alias="../../../../../params/pump-switch"/>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
   </layer>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AUTO</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle pump</name>
   <button>0</button>
   <x>-21</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/pump-switch"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle auto trim</name>
   <button>1</button>
   <x>-21</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/auto-switch"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
