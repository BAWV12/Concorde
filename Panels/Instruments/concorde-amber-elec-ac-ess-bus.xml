<?xml version="1.0"?>

<!-- Fault on AC Essential Bus :

     - no voltage on bus.
-->

<PropertyList>
 <name>Fault on AC Essential Bus</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <probe-volt>/systems/electrical/outputs/probe/ac-essential[0]</probe-volt>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>fault light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-aft.xml"/> <!-- bug -->
       <greater-than>
        <property alias="../../../../../../../../params/probe-volt"/>
        <value>20.0</value>
       </greater-than>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-ac-ess-bus.png</path>
      <x1>0.0</x1>
      <y1>0.25</y1>
      <x2>1.0</x2>
      <y2>0.75</y2>
     </texture>
     <w>104</w>
     <h>20</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <condition include="concorde-cond-light-eng-aft.xml"/>
     <w>104</w>
     <h>20</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-ac-ess-bus.png</path>
      <x1>0.0</x1>
      <y1>0.25</y1>
      <x2>1.0</x2>
      <y2>0.75</y2>
     </texture>
     <w>104</w>
     <h>20</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
