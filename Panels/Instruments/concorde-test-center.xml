<?xml version="1.0"?>

<!-- Test of center warning lights :

     - also seems to control level of lighting.
-->

<PropertyList>

 <name>Test center</name>
 <w-base>102</w-base>
 <h-base>102</h-base>


 <layers>

  <layer>
   <name>Lighting selector</name>
   <type>switch</type>

   <layer include="concorde-switch-3rd.xml">
    <name>high</name>
    <condition>
     <and>
      <not>
       <property>/controls/lighting/crew/center/low</property>
      </not>
      <not>
       <property>/controls/lighting/crew/center/test</property>
      </not>
     </and>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>test</name>
    <condition>
     <property>/controls/lighting/crew/center/test</property>
    </condition>
   </layer>

   <layer include="concorde-switch-on.xml">
    <name>low</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-34</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>LIGHTS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-56</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>42</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on (2nd line)</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>LO</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-41</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>HI</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TEST</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-36</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Test</name>
   <button>0</button>
   <x>-55</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property>/controls/lighting/crew/center/test</property>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Low</name>
   <button>1</button>
   <condition>
    <not>
     <property>/controls/lighting/crew/center/test</property>
    </not>
   </condition>
   <x>-55</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property>/controls/lighting/crew/center/low</property>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
