<?xml version="1.0"?>

<!-- Total fuel content : 

     - off is 2 collector tanks below 1000 kg.
-->

<PropertyList>

 <name>Fuel Weight display</name>
 <w-base>150</w-base>
 <h-base>60</h-base>

 <layers>



  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.png</path>
   </texture>
    <w>75</w>
    <h>30</h>
  </layer>

  <layer>
   <name>Power management</name>
   <type>switch</type>

   <layer>
    <name>Fuel Weight display</name>
    <condition>
     <and include="concorde-cond-voltage-inst.xml">
      <property>/instrumentation/fuel/serviceable</property>
      <or>
       <and>
        <greater-than>
         <property>/consumables/fuel/tank[0]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[1]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[2]/level-lbs</property>
         <value>2205</value>
        </greater-than>
       </and>
       <and>
        <greater-than>
         <property>/consumables/fuel/tank[0]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[1]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[3]/level-lbs</property>
         <value>2205</value>
        </greater-than>
       </and>
       <and>
        <greater-than>
         <property>/consumables/fuel/tank[0]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[2]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[3]/level-lbs</property>
         <value>2205</value>
        </greater-than>
       </and>
       <and>
        <greater-than>
         <property>/consumables/fuel/tank[1]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[2]/level-lbs</property>
         <value>2205</value>
        </greater-than>
        <greater-than>
         <property>/consumables/fuel/tank[3]/level-lbs</property>
         <value>2205</value>
        </greater-than>
       </and>
      </or>
     </and>
    </condition>
    <type>text</type>
    <font>led</font>
    <point-size>5.5</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>instrumentation/fuel/total-lbs</property>
      <format>%6.0f</format>
      <scale>0.45359</scale>            <!-- kg -->
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-35</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-11</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>OFF flag</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
     <x1>0.9375</x1>
     <y1>0.5</y1>
     <x2>1.0</x2>
     <y2>0.546875</y2>
    </texture>
    <w>20</w>
    <h>8</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-8</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-5</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>6</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TOTAL CONTENT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>7</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title unit</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>kg</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>19</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
