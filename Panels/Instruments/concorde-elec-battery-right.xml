<?xml version="1.0"?>

<!-- Battery selector switch (connects a battery to an essential bus) : text to the right -->

<PropertyList>

 <name>Battery selector</name>
 <w-base>100</w-base>
 <h-base>140</h-base>

 <params>
  <master-bat>/controls/electric/dc/master-bat[0]</master-bat>
  <ess-main-split>/controls/electrical/dc/esma</ess-main-split>
 </params>


 <layers>

  <layer>
   <name>Battery selector</name>
   <type>switch</type>

   <layer include="concorde-switch-on.xml">
    <name>on</name>
    <condition>
     <and>
      <property alias="../../../../../../params/master-bat"/>
      <not>
       <property alias="../../../../../../../params/ess-main-split"/>
      </not>
     </and>
    </condition>
   </layer>

   <layer include="concorde-switch-3rd.xml">
    <name>3rd state</name>
    <condition>
     <and>
      <property alias="../../../../../../params/master-bat"/>
      <property alias="../../../../../../params/ess-main-split"/>
     </and>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-19</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ESS/MAIN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-48</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>59</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on (line 2)</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>SPLIT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>44</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>BATT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3 (2nd line)</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>29</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>BATT</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-29</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-41</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off (2nd line)</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-53</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle Battery</name>
   <condition>
    <property alias="../../../../params/ess-main-split"/>
   </condition>
   <button>1</button>
   <x>-40</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/master-bat"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle Essential/Main Split</name>
   <condition>
    <property alias="../../../../params/master-bat"/>
   </condition>
   <button>0</button>
   <x>-40</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/ess-main-split"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
