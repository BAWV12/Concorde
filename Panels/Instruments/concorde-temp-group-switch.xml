<?xml version="1.0"?>

<!-- Group control switch :
-->

<PropertyList>

 <name>Group switch</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <eng-num>/systems/engines/engine[0]/engine-num</eng-num>
  <select-group>/controls/temperature/group[0]/on</select-group>
  <guard-group>/controls/temperature/group[0]/guard</guard-group>
 </params>


 <layers>

  <layer>
   <name>Failed switch</name>
   <type>switch</type>

   <layer include="concorde-switch-on.xml">
    <name>on</name>
    <condition>
     <property alias="../../../../../params/select-group"/>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>guard</name>
   <type>switch</type>

   <layer>
    <name>guard on</name>
    <condition>
     <property alias="../../../../../params/guard-group"/>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-guard.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>0.75</y2>
    </texture>
    <w>80</w>
    <h>60</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>1</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>guard off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-guard.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>0.25</y2>
    </texture>
    <w>80</w>
    <h>20</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-25</offset>
     </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
   </transformations>
  </layer>

<!-- labels -->

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>24</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title group</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>GROUP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title group number</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/eng-num"/>
     <format>%1.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>FAILED</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-40</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle group</name>
   <condition>
    <not>
     <property alias="../../../../../params/guard-group"/>
    </not>
   </condition>
   <button>1</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/select-group"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle guard</name>
   <condition>
    <property alias="../../../../params/select-group"/>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/guard-group"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
