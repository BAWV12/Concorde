_______________________________________________________________________________

Based on Default by David Megginson, david@megginson.com.

This is an instrument configuration file for the open-source flight
simulator FlightGear (www.flightgear.org).  The file is an XML-encoded
FlightGear property list defining the instrument's layers and actions.

Each instrument is composed of layers stacked on top of each other.
A layer may be a texture (with transparent parts to show the layers
underneath), text, or a special layer that switches between two
others (say, to turn an indicator light on or off).  Each layer can
move independently in proportion to a property value, and text
can be generated from property values as well: all of the layer's
movements are defined as transformations.

Actions are hotspots on the instrument that will respond to a mouse
click.  Actions always modify the values of properties, either by
adjusting them, toggling them, or swaping them with other
properties' values.
-->

<PropertyList>

 <name>Airspeed Indicator</name>
 <w-base>128</w-base>
 <h-base>128</h-base>
 
 <params>
  <test>/controls/lighting/crew/captain/test</test>
  <serviceable>/instrumentation/airspeed-indicator[0]/serviceable</serviceable>
  <failure-flag>/instrumentation/airspeed-indicator[0]/failure-flag</failure-flag>
  <vmo-failure-flag>/instrumentation/airspeed-indicator[0]/vmo-failure-flag</vmo-failure-flag>
  <speed-sel>/instrumentation/airspeed-indicator[0]/indicated-speed-kt</speed-sel>
  <vmo-sel>/instrumentation/airspeed-indicator[0]/vmo-kt</vmo-sel>
  <standby-ctrl>/instrumentation/airspeed-indicator[0]/standby</standby-ctrl>
 </params>
  
 
 <layers>


  <layer>
   <name>gauge face</name>
   <texture>   
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-asi.png</path>
   </texture>
   <w>112</w>
   <h>112</h>
  </layer>

  <layer>
   <name>Digital windows</name>
   <type>switch</type>

   <layer>
    <name>Digital airspeed</name>
    <condition>
     <not>
      <property alias="../../../../../../params/failure-flag"/>
     </not>
    </condition>
    <type>text</type>
    <point-size>13</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property alias="../../../../../../params/speed-sel"/>
      <min>50.0</min>
      <max>590.0</max>
      <format>%4.0f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-17</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>13</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Off flag</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-asi-2.png</path>
     <x1>0.8535</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>0.0977</y2>
    </texture>
    <w>12</w>
    <h>8</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>0</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>19</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>VMO flag</name>
   <condition>
    <property alias="../../../../params/vmo-failure-flag"/>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-asi-2.png</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>0.1465</x2>
    <y2>0.0977</y2>
   </texture>
   <w>12</w>
   <h>8</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>22</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>sensor</name>
   <type>switch</type>

   <layer>
    <name>ADC</name>
    <condition>
     <not>
      <property alias="../../../../../../params/standby-ctrl"/>
     </not>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-asi-2.png</path>
     <x1>0.0</x1>
     <y1>0.9023</y1>
     <x2>0.1465</x2>
     <y2>1.0</y2>
    </texture>
    <w>12</w>
    <h>8</h>
   </layer>

   <layer>
    <name>Standby</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-asi-2.png</path>
     <x1>0.8535</x1>
     <y1>0.9023</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>12</w>
    <h>8</h>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-26</offset>
    </transformation>
   </transformations>
  </layer>

   <layer>
    <name>needle</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
     <x1>0.8</x1>
     <y1>0.78125</y1>
     <x2>0.8375</x2>
     <y2>1.0</y2>
    </texture>
    <w>5.5</w>
    <h>44</h>
    <transformations>
     <transformation>
      <condition>
       <and include="concorde-cond-voltage-inst.xml">
        <property alias="../../../../../../../params/serviceable"/>
       </and>
      </condition>
      <type>rotation</type>
      <property alias="../../../../../params/speed-sel"/>
      <min>50.0</min>
      <max>590.0</max>
      <scale>1.0</scale>
       <interpolation>
       <entry><ind>  50</ind><dep>   -15</dep></entry>
       <entry><ind>  60</ind><dep>    -7.5</dep></entry>
       <entry><ind>  70</ind><dep>     0</dep></entry>
       <entry><ind> 190</ind><dep>    90</dep></entry>
       <entry><ind> 250</ind><dep>   135</dep></entry>
       <entry><ind> 350</ind><dep>   176.25</dep></entry>
       <entry><ind> 355</ind><dep>   180</dep></entry>
       <entry><ind> 475</ind><dep>   270</dep></entry>
       <entry><ind> 570</ind><dep>   341.25</dep></entry>
       <entry><ind> 590</ind><dep>   356.25</dep></entry>
       </interpolation>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>16</offset>
     </transformation>
    </transformations>
   </layer> 

   <layer>
    <name>Power management VMO</name>
    <type>switch</type>
 
    <layer>
     <name>VMO needle</name>
     <condition>
      <and include="concorde-cond-voltage-inst.xml">
       <property alias="../../../../../../params/serviceable"/>
      </and>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
      <x1>0.6914</x1>
      <y1>0.78125</y1>
      <x2>0.7289</x2>
      <y2>1.0</y2>
     </texture>
     <w>5.5</w>
     <h>44</h>
     <transformations>
      <transformation>
       <type>rotation</type>
       <property alias="../../../../../../params/vmo-sel"/>
       <min>50.0</min>
       <max>590.0</max>
       <scale>1.0</scale>
       <interpolation>
        <entry><ind>  50</ind><dep>   -15</dep></entry>
        <entry><ind>  60</ind><dep>    -7.5</dep></entry>
        <entry><ind>  70</ind><dep>     0</dep></entry>
        <entry><ind> 190</ind><dep>    90</dep></entry>
        <entry><ind> 250</ind><dep>   135</dep></entry>
        <entry><ind> 350</ind><dep>   176.25</dep></entry>
        <entry><ind> 355</ind><dep>   180</dep></entry>
        <entry><ind> 475</ind><dep>   270</dep></entry>
        <entry><ind> 570</ind><dep>   341.25</dep></entry>
        <entry><ind> 590</ind><dep>   356.25</dep></entry>
       </interpolation>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>16</offset>
      </transformation>
     </transformations>
    </layer> 
 
    <layer>
     <name>VMO off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
      <x1>0.6914</x1>
      <y1>0.78125</y1>
      <x2>0.7289</x2>
      <y2>1.0</y2>
     </texture>
     <w>5.5</w>
     <h>44</h>
     <transformations>
      <transformation>
       <type>rotation</type>
       <offset>155.625</offset>     <!-- 300 kt -->
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>16</offset>
      </transformation>
     </transformations>
    </layer> 
   </layer> 
 
   <layer>
    <name>button</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
     <x1>0.6171875</x1>
     <y1>0.2421875</y1>
     <x2>0.7890625</x2>
     <y2>0.4140625</y2>
    </texture>
    <w>14</w>
    <h>14</h>
   </layer>
  
   <layer>
    <name>glare shield</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.png</path>
     <x1>0.5</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>0.5</y2>
    </texture>
    <w>128</w>
    <h>128</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>2</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-2</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Knob</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/blister.png</path>
     <x1>0.25</x1>
     <y1>0.75</y1>
     <x2>0.5</x2>
     <y2>1.0</y2>
    </texture>
    <h>24</h>
    <w>24</w>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-50</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-50</offset>
     </transformation>
     <transformation>
      <type>rotation</type>
      <offset>180</offset>
     </transformation>
    </transformations>
   </layer> 

<!-- selector -->

   <layer>
    <name>selector</name>
    <type>switch</type>

    <layer>
     <name>selector left</name>
     <condition>
      <not>
       <property alias="../../../../../../params/standby-ctrl"/>
      </not>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
      <x1>0.0</x1>
      <x2>1.0</x2>
      <y1>0.0</y1>
      <y2>1.0</y2>
     </texture>
     <w>7</w>
     <h>16</h>
     <transformations>
      <transformation>
       <type>rotation</type>
       <offset>-90</offset>
      </transformation>
     </transformations>
    </layer>

    <layer>
     <name>selector right</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
      <x1>0.0</x1>
      <x2>1.0</x2>
      <y1>0.0</y1>
      <y2>1.0</y2>
     </texture>
     <w>7</w>
     <h>16</h>
     <transformations>
      <transformation>
       <type>rotation</type>
       <offset>0</offset>
      </transformation>
     </transformations>
    </layer>

    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>55</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-45</offset>
     </transformation>
    </transformations>
   </layer>

<!-- Yellow light within plus/minus 5 kt -->

<!-- translucent lens -->
   <layer>
    <name>Warning light</name>
    <type>switch</type>

    <layer>
     <name>off</name>
     <type>group</type>
     <condition>
      <or>
       <and>
        <or>
         <not-equals>
          <property>/autopilot/locks/speed</property>
          <value>speed-with-throttle</value>
         </not-equals>
         <and>
          <greater-than-equals>
           <property alias="../../../../../../../../../../params/speed-sel"/>
           <property n="1">/systems/autothrottle/airspeed/light-min-kt</property>
          </greater-than-equals>
          <less-than-equals>
           <property alias="../../../../../../../../../../params/speed-sel"/>
           <property n="1">/systems/autothrottle/airspeed/light-max-kt</property>
          </less-than-equals>
         </and>
        </or>
        <not>
         <property alias="../../../../../../../../params/test"/>
        </not>
       </and>
       <not include="concorde-cond-voltage-inst.xml"/>
       <not>
        <property alias="../../../../../../../params/serviceable"/>
       </not>
      </or>
     </condition>

     <layer include="concorde-bulb-led-off.xml">
      <w>15</w>
      <h>15</h>
     </layer>
     <layer>
      <name>background off</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-led.png</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>15</w>
      <h>15</h>
     </layer>
    </layer>

    <layer>
     <name>on</name>
     <type>group</type>
 
     <layer include="concorde-bulb-led-on.xml">
      <w>15</w>
      <h>15</h>
     </layer>
     <layer>
      <name>background on</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-amber-led.png</path>
       <x1>0.0</x1>
       <y1>0.0</y1>
       <x2>1.0</x2>
       <y2>1.0</y2>
      </texture>
      <w>15</w>
      <h>15</h>
      <emissive>true</emissive>
     </layer>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-49</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>47</offset>
     </transformation>
    </transformations>
   </layer>

 </layers>

 <actions>
 
  <action>
   <name>toggle sensor</name>
   <button>0</button>
   <x>43</x>
   <y>-58</y>
   <w>24</w>
   <h>24</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/standby-ctrl"/>
   </binding>
  </action>

 </actions>
</PropertyList>



