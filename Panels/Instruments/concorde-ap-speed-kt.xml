<?xml version="1.0"?>

<!--Concorde speed setting indicator.
-->

<PropertyList>

 <name>Speed setting indicator</name>
 <w-base>100</w-base>
 <h-base>100</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.png</path>
   </texture>
    <w>60</w>
    <h>35</h>
  </layer>

  <layer>
   <name>AP Speed display</name>
   <type>text</type>
   <font>led</font>
   <point-size>8.5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/controls/autoflight/speed-select</property>
     <format>%03.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-17</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-8</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AUTOTHROTTLE</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-30</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title unit</name>
   <type>text</type>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>KNOTS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-12</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-35</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
