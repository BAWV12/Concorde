<!-- Concorde gear lights :

     - the constants match the animation of the model.

     Light meaning :
     - yellow : lock released or closed during the gear operation
     (shortening lock for main gear, and upper lock for nose gear).
     - red : gear door is opened, or tail gear in motion.
     - green : gear down and locked.


     Reference :
     =========
     - http://www.concordesst.com/
-->

<PropertyList>
 <name>gear lights</name>
 <w-base>225</w-base>
 <h-base>141</h-base>


 <layers>

<!-- ==== -->
<!-- LOCK -->
<!-- ==== -->



<!-- LEFT SHORT -->

 <layer>
  <name>left short light</name>
  <type>switch</type>

  <layer>
   <name>On</name>
   <type>group</type>
   <condition>
    <or>
     <not include="concorde-cond-test-copilot.xml"/>
     <and>
      <or include="concorde-cond-voltage-gear.xml"/> <!-- bug -->
      <property>/controls/gear/gear-down</property>
      <greater-than>
       <property>/gear/gear[1]/position-norm</property>
       <value>0.0</value>
      </greater-than>
      <less-than>
       <property>/gear/gear[1]/position-norm</property>
       <property n="1">/controls/gear/time/main/gear-locked</property>
      </less-than>
     </and>
    </or>
   </condition>

   <layer include="concorde-bulb-on.xml">
    <condition include="concorde-cond-light-copilot.xml"/>
    <w>36</w>
    <h>26</h>
   </layer>
   <layer>
    <name>background left short</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.png</path>
    </texture>
    <w>36</w>
    <h>26</h>
    <emissive>true</emissive>
   </layer>
  </layer>

  <layer>
   <name>Off</name>
   <type>group</type>

   <layer include="concorde-bulb-off.xml">
    <w>36</w>
    <h>26</h>
   </layer>
   <layer>
    <name>background left short</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.png</path>
    </texture>
    <w>36</w>
    <h>26</h>
   </layer>
  </layer>
  <transformations>
   <transformation>
    <type>x-shift</type>
    <offset>-40</offset>
   </transformation>
   <transformation>
    <type>y-shift</type>
    <offset>35</offset>
   </transformation>
  </transformations>
 </layer>

  <layer>
   <name>Title left short</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>L SH</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-54</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

<!-- UPPER LOCKS -->

 <layer>
  <name>upper locks light</name>
  <type>switch</type>

  <layer>
   <name>On</name>
   <type>group</type>
   <condition>
    <or>
     <not include="concorde-cond-test-copilot.xml"/>
     <and>
      <or include="concorde-cond-voltage-gear.xml"/> <!-- bug -->
      <or>
       <and>
        <not>
         <property>/controls/gear/gear-down</property>
        </not>
        <greater-than>
         <property>/gear/gear[0]/position-norm</property>
         <property n="1">/controls/gear/time/main/lower-gear</property>
        </greater-than>
        <less-than>
         <property>/gear/gear[0]/position-norm</property>
         <property n="1">/controls/gear/time/main/gear-locked</property>
        </less-than>
       </and>
       <and>
        <property>/controls/gear/gear-down</property>
        <greater-than>
         <property>/gear/gear[0]/position-norm</property>
         <value>0.0</value>
        </greater-than>
        <less-than>
         <property>/gear/gear[0]/position-norm</property>
         <property n="1">/controls/gear/time/main/lower-gear</property>
        </less-than>
       </and>
      </or>
     </and>
    </or>
   </condition>

   <layer include="concorde-bulb-on.xml">
    <condition include="concorde-cond-light-copilot.xml"/>
    <w>36</w>
    <h>26</h>
   </layer>
   <layer>
    <name>background upper locks</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.png</path>
    </texture>
    <w>36</w>
    <h>26</h>
    <emissive>true</emissive>
   </layer>
  </layer>

  <layer>
   <name>Off</name>
   <type>group</type>

   <layer include="concorde-bulb-off.xml">
    <w>36</w>
    <h>26</h>
   </layer>
   <layer>
    <name>background upper locks</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-yellow-warning.png</path>
    </texture>
    <w>36</w>
    <h>26</h>
   </layer>
  </layer>
  <transformations>
   <transformation>
    <type>y-shift</type>
    <offset>35</offset>
   </transformation>
  </transformations>
 </layer>

  <layer>
   <name>Title upper locks</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>UP L</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

