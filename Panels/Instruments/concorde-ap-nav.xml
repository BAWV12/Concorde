   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/selector-ctrl"/>
    <step>1</step>
    <min>-1</min>
    <max>1</max>
   </binding>
  </action>

<!-- RIGHT KNOB -->

  <action>
   <name>Minus 1/10</name>
   <button>0</button>
   <x>13</x>
   <y>-47</y>
   <w>18</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/frq-ctrl"/>
    <step>-0.1</step>
    <min>100</min>
    <max>400</max>
    <wrap>0</wrap>
