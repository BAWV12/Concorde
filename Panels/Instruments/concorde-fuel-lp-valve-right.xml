<?xml version="1.0"?>

<!-- LP valve selector :

     - shut with one of the 2 motors.
     - right labels.
-->

<PropertyList>

 <name>LP valve selector</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <select-valve>/controls/fuel/tank[1]/lp-valve</select-valve>
  <select-motor>/controls/fuel/tank[1]/lp-valve-motor</select-motor>
  <guard-valve>/controls/fuel/tank[1]/lp-valve-guard</guard-valve>
 </params>


 <layers>

  <layer>
   <name>LP valve selector</name>
   <type>switch</type>

   <layer include="concorde-switch-3rd.xml">
    <name>off</name>
    <condition>
     <property alias="../../../../../params/select-valve"/>
    </condition>
   </layer>

   <layer include="concorde-switch-on.xml">
    <name>shut 1</name>
    <condition>
     <and>
      <not>
       <property alias="../../../../../../../params/select-valve"/>
      </not>
      <property alias="../../../../../../params/select-motor"/>
     </and>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>shut 2</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

<!-- labels -->

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>SHUT 1</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>35</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>39</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>8</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>SHUT 2</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-48</offset>
    </transformation>
   </transformations>
  </layer>

<!-- guard -->

  <layer>
   <name>guard</name>
   <type>switch</type>

   <layer>
    <name>guard on</name>
    <condition>
     <property alias="../../../../../params/guard-valve"/>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-guard.png</path>
     <x1>0.0</x1>
     <y1>0.125</y1>
     <x2>1.0</x2>
     <y2>0.875</y2>
    </texture>
    <w>80</w>
    <h>60</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-5</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>guard off</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-guard.png</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>0.25</y2>
    </texture>
    <w>80</w>
    <h>20</h>
    <transformations>
     <transformation>
      <type>y-shift</type>
      <offset>-25</offset>
     </transformation>
    </transformations>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle motor</name>
   <condition>
    <and>
     <not>
      <property alias="../../../../../../params/guard-valve"/>
     </not>
     <not>
      <property alias="../../../../../../params/select-valve"/>
     </not>
    </and>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/select-motor"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle valve</name>
   <condition>
    <and>
     <not>
      <property alias="../../../../../../params/guard-valve"/>
     </not>
     <property alias="../../../../../params/select-motor"/>
    </and>
   </condition>
   <button>1</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/select-valve"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>Toggle guard</name>
   <condition>
    <property alias="../../../../params/select-valve"/>
   </condition>
   <button>0</button>
   <x>-5</x>
   <y>-21</y>
   <w>42</w>
   <h>42</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/guard-valve"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
