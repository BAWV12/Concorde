<?xml version="1.0"?>

<!-- Long tank gauge.
-->

<PropertyList>

 <name>Digital Fuel Tank monitor display</name>
 <w-base>125</w-base>
 <h-base>20</h-base>

 <params>
  <name>/consumables/fuel/tank[0]/name</name>
  <lbs-select>/consumables/fuel/tank[0]/level-lbs</lbs-select>
  <content-select>/consumables/fuel/tank[0]/content-lb</content-select>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.png</path>
   </texture>
   <w>125</w>
   <h>20</h>
  </layer>

  <layer>
   <name>Number</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>text-value</type>
     <property alias="../../../../../params/name"/>
     <format>%2s</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-57</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Power management</name>
   <type>switch</type>

   <layer>
    <name>kg display</name>
    <type>switch</type>
    <condition include="concorde-cond-voltage-tank.xml"/>

    <layer>
     <name>kg</name>
     <condition>
      <and>
       <greater-than>
        <property alias="../../../../../../../../params/lbs-select"/>
        <value>1000.0</value>
       </greater-than>
       <less-than>
        <property alias="../../../../../../../../params/lbs-select"/>
        <property n="1" alias="../../../../../../../../params/content-select"/>
       </less-than>
      </and>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>7</point-size>
     <color>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property alias="../../../../../../../params/lbs-select"/>
       <scale>0.453592</scale>
       <format>%0.f</format>
      </chunk>
     </chunks>
    </layer>

    <layer>
     <name>kg (full)</name>
     <condition>
      <greater-than-equals>
       <property alias="../../../../../../../params/lbs-select"/>
       <property n="1" alias="../../../../../../../params/content-select"/>
      </greater-than-equals>
     </condition>
     <type>text</type>
     <font>led</font>
     <point-size>7</point-size>
     <color>
      <red>0.0</red>
      <green>1.0</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property alias="../../../../../../../params/lbs-select"/>
       <scale>0.453592</scale>
       <format>%0.f</format>
      </chunk>
     </chunks>
    </layer>

    <layer>
     <name>kg (empty)</name>
     <type>text</type>
     <font>led</font>
     <point-size>7</point-size>
     <color>
      <red>0.85</red>
      <green>0.85</green>
      <blue>0.0</blue>
     </color>
     <chunks>
      <chunk>
       <type>number-value</type>
       <property alias="../../../../../../../params/lbs-select"/>
       <scale>0.453592</scale>
       <format>%0.f</format>
      </chunk>
     </chunks>
    </layer>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-27</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
       <offset>-6</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>OFF flag</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
     <x1>0.9375</x1>
     <y1>0.5</y1>
     <x2>1.0</x2>
     <y2>0.546875</y2>
    </texture>
    <w>20</w>
    <h>8</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-10</offset>
     </transformation>
    </transformations>
   </layer>

  </layer>

  <layer>
   <name>kg-Title</name>
   <type>text</type>
   <point-size>18</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>kg</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
