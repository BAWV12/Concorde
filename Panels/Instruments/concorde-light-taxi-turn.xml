<?xml version="1.0"?>

<!-- Taxi turn light switch :

     - double switch, because text would disturb the 2nd switch.
-->

<PropertyList>

 <name>Taxi turn light switch</name>
 <w-base>156</w-base>
 <h-base>104</h-base>

 <params>
  <light-on>/controls/lighting/external/taxi-turn[0]/on</light-on>
  <light-on2>/controls/lighting/external/taxi-turn[1]/on</light-on2>
 </params>


 <layers>

  <layer>
   <name>switch</name>
   <type>switch</type>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
    <condition>
     <not>
      <property alias="../../../../../../params/light-on"/>
     </not>
    </condition>
   </layer>

   <layer include="concorde-switch-on.xml">
    <name>on</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>On Title</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>30</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Off Title</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>11</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-34</offset>
    </transformation>
   </transformations>
  </layer>

<!-- side -->

  <layer>
   <name>Left Title</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>L</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-12</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-45</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Right Title</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>R</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>51</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-45</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>switch2</name>
   <type>switch</type>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
    <condition>
     <not>
      <property alias="../../../../../../params/light-on2"/>
     </not>
    </condition>
   </layer>

   <layer include="concorde-switch-on.xml">
    <name>on</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>53</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>

 <actions>

  <action>
   <name>toggle light</name>
   <button>0</button>
   <x>-32</x>
   <y>-19</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/light-on"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>toggle light 2</name>
   <button>0</button>
   <x>32</x>
   <y>-19</y>
   <w>44</w>
   <h>44</h>
   <binding>
    <command>property-toggle</command>
    <property alias="../../../../params/light-on2"/>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>
 
</PropertyList>
