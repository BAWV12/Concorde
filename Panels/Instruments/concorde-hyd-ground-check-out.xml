<!-- knob -->

  <layer>
   <name>knob rotation</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/navcom-radios.png</path>
    <x1>0.53125</x1>
    <x2>0.59765625</x2>
    <y1>0.05859375</y1>
    <y2>0.1484375</y2>
   </texture>
   <w>48</w>
   <h>60</h>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <condition>
      <less-than>
       <property>/controls/hydraulic/ground/selector</property>
       <value>3</value>
      </less-than>
     </condition>
     <property>/controls/hydraulic/ground/selector</property>
     <scale>60</scale>
     <offset>-150</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <condition>
      <greater-than>
       <property>/controls/hydraulic/ground/selector</property>
       <value>2</value>
      </greater-than>
     </condition>
     <property>/controls/hydraulic/ground/selector</property>
     <scale>60</scale>
     <offset>-150</offset>
    </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>1</offset>
    </transformation>
   </transformations>
  </layer>

