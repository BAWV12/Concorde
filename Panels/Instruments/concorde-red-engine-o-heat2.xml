<?xml version="1.0"?>

<!-- Alarm on Engine Over Heat
-->

<PropertyList>
 <name>Alarm Engine Over Heat</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <or include="concorde-cond-test-eng-forward.xml"/>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-engine-o-heat.png</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <condition include="concorde-cond-light-eng-forward.xml"/>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-engine-o-heat.png</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

   <layer>
    <name>oheat</name>
    <type>group</type>
    <condition>
      <or>
        <and>
          <greater-than>
            <property>/engines/engine[1]/egt-degf</property>
            <value>1520</value>
          </greater-than>
        </and>
      </or>
    </condition>
    <layer include="concorde-bulb-on.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-engine-o-heat.png</path>
      <x1>0.0</x1>
      <y1>0.2</y1>
      <x2>1.0</x2>
      <y2>0.8</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>

 </layers>

</PropertyList>
