<?xml version="1.0"?>

<PropertyList>
 <name>Flyover control schedule</name>
 <w-base>52</w-base>
 <h-base>26</h-base>

 <params>
  <schedule-ctrl>/systems/engines/engine[0]/schedule</schedule-ctrl>
 </params>


 <layers>

<!-- translucent lens -->  
  <layer>
   <name>indicator light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <and>
       <or include="concorde-cond-test-eng-forward.xml"/>
       <not-equals>
        <property alias="../../../../../../../../params/schedule-ctrl"/>
        <value>flyover</value>
       </not-equals>
      </and>
     </or>
    </condition>

    <layer include="concorde-bulb-white-off.xml">
     <w>52</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-button.png</path>
     </texture>
     <w>52</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-white-on.xml">
     <condition include="concorde-cond-light-eng-forward.xml"/>
     <w>52</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background lighted</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-bulb.png</path>
     </texture>
     <w>52</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>15</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>F/O</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-15</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
