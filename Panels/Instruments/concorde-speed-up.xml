<?xml version="1.0"?>

<PropertyList>

 <name>Speed up display</name>
 <w-base>50</w-base>
 <h-base>40</h-base>

 <layers>

  <layer>
   <name>crew</name>
   <condition>
    <and>
     <not>
      <property>/systems/human/serviceable</property>
     </not>
     <or>
      <property>/controls/copilot/activ</property>
      <property>/controls/engineer/activ</property>
     </or>
    </and>
   </condition>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>0.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>crew</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-18</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Toggle crew display</name>
   <button>0</button>
   <x>-20</x>
   <y>-14</y>
   <w>30</w>
   <h>34</h>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.crewscreen.minimizeexport();</script>
   </binding>
  </action>

 </actions>

</PropertyList>
