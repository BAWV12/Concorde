<?xml version="1.0"?>

<!-- Anti-icing wing and intake main rotary selector -->

<PropertyList>
 <name>Anti-icing rotary selector</name>
 <w-base>204</w-base>
 <h-base>204</h-base>


 <layers>

  <layer>
   <name>Title seconds</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>SECS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-5</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>75</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>35</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>55</offset>
    </transformation>
   </transformations>
  </layer>

<!-- SELECTOR LEFT -->

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>13</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>65</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 4 seconds</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>4</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-18</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>51</offset>
    </transformation>
   </transformations>
  </layer>

<!-- SELECTOR RIGHT -->

  <layer>
   <name>Title 6 seconds</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>6</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>18</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>51</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 8 seconds</name>
   <type>text</type>
   <point-size>11</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>8</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>32</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>knob rotation</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/navcom-radios.png</path>
    <x1>0.53125</x1>
    <x2>0.59765625</x2>
    <y1>0.05859375</y1>
    <y2>0.1484375</y2>
   </texture>
   <w>60</w>
   <h>65</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <property>/controls/anti-ice/wing/main-selector</property>
     <min>0</min>
     <max>3</max>
     <scale>30</scale>
     <offset>-45</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>17</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>MAIN</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-58</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>selector left</name>
   <button>0</button>
   <x>-43</x>
   <y>-41</y>
   <w>42</w>
   <h>82</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/anti-ice/wing/main-selector</property>
    <step>-1</step>
    <min>0</min>
    <max>3</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

  <action>
   <name>selector right</name>
   <button>0</button>
   <x>1</x>
   <y>-41</y>
   <w>42</w>
   <h>82</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/anti-ice/wing/main-selector</property>
    <step>1</step>
    <min>0</min>
    <max>3</max>
    <wrap>0</wrap>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
