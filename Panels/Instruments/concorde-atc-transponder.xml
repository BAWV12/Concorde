<?xml version="1.0"?>

<PropertyList>

 <name>ATC transponder</name>
 <w-base>60</w-base>
 <h-base>30</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.png</path>
   </texture>
    <w>60</w>
    <h>30</h>
  </layer>

  <layer>
   <name>display</name>
   <type>text</type>
   <font>led</font>
   <point-size>6</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <format>%04.0f</format>
     <property>/instrumentation/transponder/id-code</property>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-17</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
