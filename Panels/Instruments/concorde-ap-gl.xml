<?xml version="1.0"?>

<!-- Glide slope mode -->

<PropertyList>
 <name>Glide slope mode</name>
 <w-base>104</w-base>
 <h-base>26</h-base>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Button light</name>
   <type>switch</type>

   <layer>
    <name>on</name>
    <type>group</type>
    <condition>
     <and include="concorde-cond-glideslope.xml">
      <equals>
       <property>/controls/autoflight/altitude</property>
       <value>gs1-hold</value>
      </equals>
      <not include="concorde-cond-land.xml"/>
     </and>
    </condition>

    <layer include="concorde-bulb-white-on.xml">
     <condition include="concorde-cond-light-afcs.xml"/>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background lighted</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-bulb.png</path>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>

   <layer>
    <name>off</name>
    <type>group</type>

    <layer include="concorde-bulb-white-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-bulb.png</path>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>46</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>GL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-32</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Glide slope mode</desc>
   <condition include="concorde-cond-voltage-autopilot.xml"/>
   <button>0</button>
   <x>-52</x>
   <y>-13</y>
   <w>104</w>
   <h>26</h>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.autopilotsystem.apglideexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
