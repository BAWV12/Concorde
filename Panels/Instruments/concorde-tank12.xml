<!-- Fuel tank 12000 kg :

     - tanks 6 and 8.
     - tanks 9 to 11.
-->


<PropertyList>
 <name>Fuel Quantity</name>
 <w-base>160</w-base>
 <h-base>160</h-base>

 <params>
  <name>/consumables/fuel/tank[0]/name</name>
  <lbs-select>/consumables/fuel/tank[0]/level-gal_us</lbs-select>
 </params>

 <layers>

  <layer include="concorde-gauge.xml"/>

  <layer>
   <name>background</name>
   <w>110</w>
   <h>110</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-tank12.png</path>
    <x1>0</x1>
    <y1>0</y1>
    <x2>1</x2>
    <y2>1</y2>
   </texture>
  </layer>

  <layer>
   <name>number</name>
   <type>switch</type>

   <layer>
    <name>Number 6, 8</name>
    <type>switch</type>
    <condition>
     <or>
      <equals>
       <property alias="../../../../../../../params/name"/>
       <value>6</value>
      </equals>
      <equals>
       <property alias="../../../../../../../params/name"/>
       <value>8</value>
      </equals>
     </or>
    </condition>

    <layer>
     <name>6</name>
     <condition>
      <equals>
       <property alias="../../../../../../../params/name"/>
       <value>6</value>
      </equals>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-6.png</path>
      <x1>0</x1>
      <y1>0</y1>
      <x2>1</x2>
      <y2>1</y2>
     </texture>
     <w>25</w>
     <h>25</h>
    </layer>
 
    <layer>
     <name>8</name>
     <condition>
      <equals>
       <property alias="../../../../../../../params/name"/>
       <value>8</value>
      </equals>
     </condition>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-8.png</path>
      <x1>0</x1>
      <y1>0</y1>
      <x2>1</x2>
      <y2>1</y2>
     </texture>
     <w>25</w>
     <h>25</h>
    </layer>

    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-71</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-34</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>10</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/name"/>
      <value>10</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-10.png</path>
     <x1>0</x1>
     <y1>0</y1>
     <x2>1</x2>
     <y2>1</y2>
    </texture>
    <w>25</w>
    <h>25</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-73</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>26</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>11</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/name"/>
      <value>11</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-11.png</path>
     <x1>0</x1>
     <y1>0</y1>
     <x2>1</x2>
     <y2>1</y2>
    </texture>
    <w>25</w>
    <h>25</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-43</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>66</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>9</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-9.png</path>
     <x1>0</x1>
     <y1>0</y1>
     <x2>1</x2>
     <y2>1</y2>
    </texture>
    <w>25</w>
    <h>25</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-71</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-4</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Power management</name>
   <type>switch</type>

   <layer>
    <name>Level display</name>
    <condition include="concorde-cond-voltage-inst.xml"/>
    <type>text</type>
    <font>led</font>
    <point-size>5</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
       <property alias="../../../../../../params/lbs-select"/>
      <format>%05.0f</format>
      <scale>0.453592</scale> <!-- kg -->
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-16</offset>
     </transformation>
      <transformation>
      <type>y-shift</type>
      <offset>-49</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>OFF flag</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
     <x1>0.9375</x1>
     <y1>0.5</y1>
     <x2>1.0</x2>
     <y2>0.546875</y2>
    </texture>
    <w>25</w>
    <h>8</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>0</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-45</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>needle</name>
   <w>6</w>
   <h>48</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
    <x1>0.8</x1>
    <y1>0.78125</y1>
    <x2>0.8375</x2>
    <y2>1.0</y2>
   </texture>
   <transformations>
    <transformation>
     <type>rotation</type>
      <condition include="concorde-cond-voltage-inst.xml"/>
      <property alias="../../../../../params/lbs-select"/>
      <min>0</min>
      <max>34800</max> <!-- 13000 kg -->
      <scale>0.00898</scale>
      <offset>216</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>20.0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.png</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>128</w>
   <h>128</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>
</PropertyList>
