<?xml version="1.0"?>

<!-- Air conditioning valve switch :
-->

<PropertyList>

 <name>Air conditioning valve</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <cond-valve>/controls/pneumatic/engine[0]/conditioning-valve</cond-valve>
 </params>


 <layers>

  <layer>
   <name>valve</name>
   <type>switch</type>

   <layer include="concorde-switch-3rd.xml">
    <name>on</name>
    <condition>
     <property alias="../../../../../params/cond-valve"/>
    </condition>
   </layer>

   <layer include="concorde-switch-off.xml">
    <name>off</name>
   </layer>

   <layer include="concorde-switch-on.xml">
    <name>boost</name>
   </layer>

   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>16</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>BOOST</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-48</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-35</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

