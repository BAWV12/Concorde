<!-- Primary exhaust nozzle size :

     - yellow : engine 4 takeoff limiter.
     - white : correct reheat.


     Known problems :
     ==============
     JSBSim nozzle 4 position must be truncated, when takeoff limiter.

     Reference :
     =========
     - http://www.concordesst.com/.
-->

<PropertyList>
 <name>Primary exhaust nozzle area</name>
 <w-base>128</w-base>
 <h-base>128</h-base>

 <params>
  <nozzle-select>/engines/engine[0]/nozzle-pos-norm</nozzle-select>
  <reheat-select>/controls/engines/engine[0]/reheat</reheat-select>
  <engine-num>/systems/engines/engine[0]/engine-num</engine-num>
 </params>


 <layers>


  <layer>
   <name>background sector</name>
   <type>switch</type>

  </layer>

  <layer>
   <name>background</name>
   <w>95</w>
   <h>95</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-nozzle.png</path>
    <x1>0</x1>
    <y1>0</y1>
    <x2>1</x2>
    <y2>1</y2>
   </texture>
  </layer>

  <layer>
   <name>big needle</name>
   <type>switch</type>

   <layer>
    <name>needle</name>
    <condition>
     <not-equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>4</value>
     </not-equals>
    </condition>
    <w>6</w>
    <h>41</h>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
     <x1>0.8</x1>
     <y1>0.78125</y1>
     <x2>0.8375</x2>
     <y2>1.0</y2>
    </texture>
    <transformations>
     <transformation>
      <type>rotation</type>
      <condition include="concorde-cond-voltage-inst.xml"/>
      <property alias="../../../../../../params/nozzle-select"/>
      <scale>180</scale>
      <offset>-90</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>20.0</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>needle 4</name>
    <w>6</w>
    <h>41</h>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
     <x1>0.8</x1>
     <y1>0.78125</y1>
     <x2>0.8375</x2>
     <y2>1.0</y2>
    </texture>
    <transformations>
     <transformation>
      <type>rotation</type>
      <condition>
       <and include="concorde-cond-voltage-inst.xml">
        <or>
         <greater-than>
          <property>/controls/engines/engine[3]/throttle</property>
          <property n="1">/controls/engines/engine[3]/n1-to-limit</property>
         </greater-than>
         <not>
          <property>/controls/engines/engine[3]/augmentation</property>
         </not>
        </or>
       </and>
      </condition>
      <property alias="../../../../../../params/nozzle-select"/>
      <scale>180</scale>
      <offset>-90</offset>
     </transformation>
     <transformation>
      <type>rotation</type>
      <condition>
       <and include="concorde-cond-voltage-inst.xml">
        <and>
         <less-than-equals>
          <property>/engines/engine[3]/n1</property>
          <property n="1">/controls/engines/engine[3]/n1-to-limit</property>
         </less-than-equals>
         <property>/controls/engines/engine[3]/augmentation</property>
        </and>
       </and>
      </condition>
      <property alias="../../../../../../params/nozzle-select"/>
      <scale>180</scale>
      <offset>-90</offset>
      <max>0.73</max>                  <!-- yellow sector -->
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>20.0</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>OFF flag</name>
   <condition>
    <not include="concorde-cond-voltage-inst.xml"/>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
    <x1>0.9375</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>0.546875</y2>
   </texture>
   <w>25</w>
   <h>8</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-10</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-34</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.png</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>113</w>
   <h>113</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>3</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-3</offset>
    </transformation>
   </transformations>
  </layer>

<!-- reheat selected light (selector away from the OFF position) -->

<!-- translucent lens -->
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or>
      <and>
       <not>
        <property alias="../../../../../../../../params/reheat-select"/>
       </not>
       <or include="concorde-cond-test-center.xml"/>
      </and>
      <not include="concorde-cond-voltage-inst.xml"/>
     </or>
    </condition>

    <layer include="concorde-bulb-led-white-off.xml">
     <w>17</w>
     <h>17</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-led.png</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>1.0</x2>
      <y2>1.0</y2>
     </texture>
     <w>17</w>
     <h>17</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-led-white-on.xml">
     <w>17</w>
     <h>17</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-led.png</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>1.0</x2>
      <y2>1.0</y2>
     </texture>
     <w>17</w>
     <h>17</h>
     <emissive>true</emissive>
    </layer>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-42</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>46</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>
</PropertyList>
