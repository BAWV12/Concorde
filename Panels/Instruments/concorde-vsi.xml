<?xml version="1.0"?>

<!-- Vertical Speed Indicator :

     - the real blue strip has a ratio of 6.5 (vertical/horizontal).
     - the left black strip is slightly narrower than the right black strip.
     - it uses feet/s, to authorize a swap to /velocities/vertical-speed-fps.
-->

<PropertyList>

 <name>VSI display</name>
 <w-base>40</w-base>
 <h-base>240</h-base>

 <params>
  <tcr-ctrl>/autopilot/settings/vertical-speed-fpm</tcr-ctrl>
  <speed-sel>/instrumentation/vertical-speed-indicator[0]/indicated-speed-fps</speed-sel>
  <alarm-flag>/instrumentation/vertical-speed-indicator[0]/alarm-flag</alarm-flag>
 </params>


 <layers>


  <layer>
   <name>instrument background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
    <x1>0.43</x1>
    <y1>0.0</y1>
    <x2>0.57</x2>
    <y2>1.0</y2>
   </texture>
    <w>25</w>
    <h>160</h>
  </layer>

  <layer>
   <name>Index</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
    <x1>0.78</x1>
    <y1>0.78</y1>
    <x2>0.99</x2>
    <y2>0.99</y2>
   </texture>
   <w>11</w>
   <h>11</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>7</offset> <!-- aligned right -->
    </transformation> 
    <transformation>
     <condition include="concorde-cond-voltage-inst.xml"/>
     <type>y-shift</type>
     <property alias="../../../../../params/speed-sel"/>
     <min>-100.0</min>
     <max>100.0</max>
     <scale>1.0</scale>
     <interpolation> <!-- index must increase, because of lookup ! -->
      <entry><ind> -100.0</ind><dep>-66.0</dep></entry>
      <entry><ind>  -33.3</ind><dep>-39.0</dep></entry>
      <entry><ind>  -16.7</ind><dep>-27.0</dep></entry>
      <entry><ind>   0.0</ind><dep>  0.0</dep></entry>
      <entry><ind>   16.7</ind><dep> 27.0</dep></entry>
      <entry><ind>   33.3</ind><dep> 39.0</dep></entry>
      <entry><ind>  100.0</ind><dep> 66.0</dep></entry>
     </interpolation>
    </transformation>
   </transformations>
  </layer>

<!-- POSITIV WINDOW -->

  <layer>
   <name>Overflow</name>
   <type>switch</type>
   <condition include="concorde-cond-voltage-inst.xml"/>

   <layer>
    <name>upper window</name>
    <type>group</type>
    <condition>
     <greater-than>
      <property alias="../../../../../../params/speed-sel"/>
      <value>100</value>
     </greater-than>
    </condition>
  
    <layer>
     <name>speed in thousands of ft/min</name>
     <type>switch</type>
  
     <layer>
      <name>8000 ft/min</name>
      <condition>
       <less-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>141.7</value>
       </less-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.888</y1>
       <x2>0.065</x2>
       <y2>0.955</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
  
     <layer>
      <name>9000 ft/min</name>
      <condition>
       <less-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>158.3</value>
       </less-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.810</y1> <!-- step 40/512 -->
       <x2>0.065</x2>
       <y2>0.877</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
  
     <layer>
      <name>10000 ft/min</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.732</y1>
       <x2>0.065</x2>
       <y2>0.799</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>

     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>1</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>72</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>

<!-- NEGATIV WINDOW -->

   <layer>
    <name>lower window</name>
    <type>group</type>
    <condition>
     <less-than>
      <property alias="../../../../../../params/speed-sel"/>
      <value>-100</value>
     </less-than>
    </condition>
  
    <layer>
     <name>speed in thousands of ft/min</name>
     <type>switch</type>
  
     <layer>
      <name>-8000 ft/min</name>
      <condition>
       <greater-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>-141.7</value>
       </greater-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.888</y1>
       <x2>0.065</x2>
       <y2>0.955</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
  
     <layer>
      <name>-9000 ft/min</name>
      <condition>
       <greater-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>-158.3</value>
       </greater-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.810</y1> <!-- step 40/512 -->
       <x2>0.065</x2>
       <y2>0.877</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
  
     <layer>
      <name>-10000 ft/min</name>
      <condition>
       <greater-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>-208.3</value>
       </greater-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.732</y1>
       <x2>0.065</x2>
       <y2>0.799</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
  
     <layer>
      <name>-15000 ft/min</name>
      <condition>
       <greater-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>-291.7</value>
       </greater-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.654</y1>
       <x2>0.065</x2>
       <y2>0.721</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
  
     <layer>
      <name>-20000 ft/min</name>
      <condition>
       <greater-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>-375.0</value>
       </greater-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.576</y1>
       <x2>0.065</x2>
       <y2>0.643</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
  
     <layer>
      <name>-25000 ft/min</name>
      <condition>
       <greater-than>
        <property alias="../../../../../../../../params/speed-sel"/>
        <value>-458.3</value>
       </greater-than>
      </condition>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.497</y1>
       <x2>0.065</x2>
       <y2>0.564</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>
 
     <layer>
      <name>-30000 ft/min</name>
      <texture>
       <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
       <x1>0.010</x1>
       <y1>0.419</y1>
       <x2>0.065</x2>
       <y2>0.486</y2>
      </texture>
      <w>9</w>
      <h>11</h>
     </layer>

     <transformations>
      <transformation>
       <type>x-shift</type>
       <offset>1</offset>
      </transformation>
      <transformation>
       <type>y-shift</type>
       <offset>-72</offset>
      </transformation>
     </transformations>
    </layer>
   </layer>
  </layer>

<!-- OFF FLAGS -->

  <layer>
   <name>OFF flag</name>
   <condition>
    <property alias="../../../../params/alarm-flag"/>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
    <x1>0.9375</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>0.546875</y2>
   </texture>
   <w>20</w>
   <h>8</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>OFF flag 2</name>
   <condition>
    <property alias="../../../../params/alarm-flag"/>
   </condition>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/misc-1.png</path>
    <x1>0.9375</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>0.546875</y2>
   </texture>
   <w>20</w>
   <h>8</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-1</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

<!--DATUM --> 

  <layer>
   <name>command bug</name>
   <type>switch</type>

   <layer>
    <name>Datum slaved to vertical speed</name>
    <condition>
     <not include="concorde-cond-vertical.xml"/>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/hsi2.png</path>
     <x1>0.8465625</x1>
     <x2>0.948125</x2>
     <y1>0.449375</y1>
     <y2>0.5375</y2>
    </texture>
    <w>9</w>
    <h>9</h>
    <transformations>
     <transformation>
      <type>rotation</type>
      <offset>-90</offset> <!-- horizontal right -->
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>10</offset> <!-- aligned left -->
     </transformation> 
     <transformation>
      <condition include="concorde-cond-voltage-inst.xml"/>
      <type>x-shift</type>
      <property alias="../../../../../../params/speed-sel"/>
      <min>-100.0</min>
      <max>100.0</max>
      <scale>1.0</scale>
      <interpolation> <!-- index must increase, because of lookup ! -->
      <entry><ind> -100.0</ind><dep>-66.0</dep></entry>
      <entry><ind>  -33.3</ind><dep>-39.0</dep></entry>
      <entry><ind>  -16.7</ind><dep>-27.0</dep></entry>
      <entry><ind>   0.0</ind><dep>  0.0</dep></entry>
      <entry><ind>   16.7</ind><dep> 27.0</dep></entry>
      <entry><ind>   33.3</ind><dep> 39.0</dep></entry>
      <entry><ind>  100.0</ind><dep> 66.0</dep></entry>
       </interpolation>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Datum display</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/hsi2.png</path>
     <x1>0.8465625</x1>
     <x2>0.948125</x2>
     <y1>0.449375</y1>
     <y2>0.5375</y2>
    </texture>
    <w>9</w>
    <h>9</h>
    <transformations>
     <transformation>
      <type>rotation</type>
      <offset>-90</offset> <!-- horizontal right -->
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>10</offset> <!-- aligned left -->
     </transformation> 
     <transformation>
      <condition include="concorde-cond-voltage-inst.xml"/>
      <type>x-shift</type>
      <property alias="../../../../../../params/tcr-ctrl"/>
      <min>-6000.0</min>
      <max>6000.0</max>
      <scale>1.0</scale>
      <interpolation> <!-- index must increase, because of lookup ! -->
       <entry><ind>-6000.0</ind><dep>-66.0</dep></entry>
       <entry><ind>-2000.0</ind><dep>-39.0</dep></entry>
       <entry><ind>-1000.0</ind><dep>-27.0</dep></entry>
       <entry><ind>    0.0</ind><dep>  0.0</dep></entry>
       <entry><ind> 1000.0</ind><dep> 27.0</dep></entry>
       <entry><ind> 2000.0</ind><dep> 39.0</dep></entry>
       <entry><ind> 6000.0</ind><dep> 66.0</dep></entry>
       </interpolation>
     </transformation>
    </transformations>
   </layer>
  </layer>

<!-- UNIT -->

  <layer>
   <name>Unit</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-vsi.png</path>
    <x1>0.75</x1>
    <y1>0.46875</y1>
    <x2>1.0</x2>
    <y2>0.53125</y2>
   </texture>
    <w>44</w>
    <h>11</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-85</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Minus 100</name>
   <button>0</button>
   <condition include="concorde-cond-vertical.xml"/>
   <x>-15</x>
   <y>-42</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>-100</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Minus 10</name>
   <button>0</button>
   <condition include="concorde-cond-vertical.xml"/>
   <x>0</x>
   <y>-42</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>-10</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 100</name>
   <button>0</button>
   <condition include="concorde-cond-vertical.xml"/>
   <x>-15</x>
   <y>23</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>100</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <condition include="concorde-cond-vertical.xml"/>
   <x>0</x>
   <y>23</y>
   <w>15</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/tcr-ctrl"/>
    <step>10</step>
    <min>-6000</min>
    <max>6000</max>
    <wrap>0</wrap>
   </binding>
  </action>

 </actions>

</PropertyList>
