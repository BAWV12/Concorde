<?xml version="1.0"?>

<!-- Concorde True Air Speed -->

<PropertyList>

 <name>TAS</name>
 <w-base>120</w-base>
 <h-base>60</h-base>

 <layers>


  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-black-bg.png</path>
   </texture>
    <w>90</w>
    <h>35</h>
  </layer>

  <layer>
   <name>Power Management</name>
   <type>switch</type>

   <layer>
    <name>TAS display</name>
    <condition>
     <and include="concorde-cond-voltage-inst.xml">
      <property>/instrumentation/tas-indicator/serviceable</property>
     </and>
    </condition>
    <type>text</type>
    <point-size>14</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/instrumentation/tas-indicator/indicated-speed-fps</property>
      <format>%4.0f</format>
      <scale>0.592484</scale>        <!-- kt -->
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-17</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-3</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Off flag</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-horizon.png</path>
     <x1>0.85</x1>
     <y1>0.35</y1>
     <x2>0.96</x2>
     <y2>0.43</y2>
    </texture>
    <w>20</w>
    <h>18</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-25</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>6</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>


  <layer>
   <name>Unit</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>kts</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-2</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>6</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TAS</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-8</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-12</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
