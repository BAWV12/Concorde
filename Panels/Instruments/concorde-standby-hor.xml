<!-- Concorde standby artificial horizon.


Adapted from Martin Dressler dr@musicabona.cz
Artificial horizon from C172RG small version
GPL
_______________________________________________________________________________

Based on Default by David Megginson, david@megginson.com.

This is an instrument configuration file for the open-source flight
simulator FlightGear (www.flightgear.org).  The file is an XML-encoded
FlightGear property list defining the instrument's layers and actions.

Each instrument is composed of layers stacked on top of each other.
A layer may be a texture (with transparent parts to show the layers
underneath), text, or a special layer that switches between two
others (say, to turn an indicator light on or off).  Each layer can
move independently in proportion to a property value, and text
can be generated from property values as well: all of the layer's
movements are defined as transformations.

Actions are hotspots on the instrument that will respond to a mouse
click.  Actions always modify the values of properties, either by
adjusting them, toggling them, or swaping them with other
properties' values.
-->

<PropertyList>

 <name>Concorde Standby Artifical horizon</name>

 <w-base>128</w-base>
 <h-base>128</h-base>

 <params>
  <serviceable>/instrumentation/attitude-standby/serviceable</serviceable>
  <roll-deg>/instrumentation/attitude-standby/indicated-roll-deg</roll-deg>
  <pitch-deg>/instrumentation/attitude-standby/indicated-pitch-deg</pitch-deg>
  <offset-deg>/instrumentation/attitude-standby/horizon-offset-deg</offset-deg>
 </params>


 <layers>


  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-horizon.png</path>
    <x1>0.01</x1>
    <y1>0.01</y1>
    <x2>0.49</x2>
    <y2>0.49</y2>
   </texture>
   <w>109</w>
   <h>109</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <condition>
      <and include="concorde-cond-voltage-standby.xml">
       <property alias="../../../../../../../params/serviceable"/>
      </and>
     </condition>
     <property alias="../../../../../params/roll-deg"/>
     <min>-360.0</min>
     <max>360.0</max>
     <scale>-1</scale>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>pitch</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-horizon.png</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>0.875</x2>
    <y2>0.25</y2>
   </texture>
   <w>78</w>
   <h>53</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <condition>
      <and include="concorde-cond-voltage-standby.xml">
       <property alias="../../../../../../../params/serviceable"/>
      </and>
     </condition>
     <property alias="../../../../../params/roll-deg"/>
     <min>-360.0</min>
     <max>360.0</max>
     <scale>-1</scale>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <condition>
      <and include="concorde-cond-voltage-standby.xml">
       <property alias="../../../../../../../params/serviceable"/>
      </and>
     </condition>
     <property alias="../../../../../params/pitch-deg"/>
     <min>-20.0</min>
     <max>20.0</max>
     <scale>-1.075</scale>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>roll</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-horizon.png</path>
    <x1>0.51</x1>
    <y1>0.51</y1>
    <x2>0.99</x2>
    <y2>0.99</y2>
   </texture>
   <w>109</w>
   <h>109</h>
   <transformations>
    <transformation>
     <type>rotation</type>
     <condition>
      <and include="concorde-cond-voltage-standby.xml">
       <property alias="../../../../../../../params/serviceable"/>
      </and>
     </condition>
     <property alias="../../../../../params/roll-deg"/>
     <min>-360.0</min>
     <max>360.0</max>
     <scale>-1</scale>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>plane</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-horizon.png</path>
    <x1>0.5</x1>
    <y1>0.25</y1>
    <x2>0.75</x2>
    <y2>0.40625</y2>
   </texture>
   <h>36</h>
   <w>56</w>
   <transformations>
    <transformation>
     <type>y-shift</type>
     <property>/instrumentation/attitude-standby/horizon-offset-deg</property>
     <offset>-17</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>foreground</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-horizon.png</path>
    <x1>0.0</x1>
    <y1>0.5</y1>
    <x2>0.5</x2>
    <y2>1.0</y2>
   </texture>
   <w>109</w>
   <h>109</h>
  </layer>

  <layer>
   <name>NAV OFF</name>
   <condition>
    <or>
     <not include="concorde-cond-voltage-standby.xml"/>
     <not>
      <property alias="../../../../../../params/serviceable"/>
     </not>
    </or>
   </condition>
   <w>22</w>
   <h>13</h>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/hsi2.png</path>
    <x1>0.796875</x1>
    <x2>1.0</x2>
    <y1>0.765625</y1>
    <y2>0.8828125</y2>
   </texture>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-45</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>
  <action>
   <name>fine lower</name>
   <button>0</button>
   <x>-11</x>
   <y>-62</y>
   <w>11</w>
   <h>22</h>
  <binding>
  <command>property-adjust</command>
   <property alias="../../../../params/offset-deg"/>
   <step>-0.5</step>
   <min>-5</min>
   <max>5</max>
   <wrap>false</wrap>
  </binding>
  </action>

  <action>
   <name>coarse lower</name>
   <button>1</button>
   <x>-11</x>
   <y>-62</y>
   <w>11</w>
   <h>22</h>
  <binding>
  <command>property-adjust</command>
   <property alias="../../../../params/offset-deg"/>
   <step>-5</step>
   <min>-5</min>
   <max>5</max>
   <wrap>false</wrap>
  </binding>
  </action>

  <action>
   <name>fine raise</name>
   <button>0</button>
   <x>0</x>
   <y>-62</y>
   <w>11</w>
   <h>22</h>
  <binding>
  <command>property-adjust</command>
   <property alias="../../../../params/offset-deg"/>
   <step>0.5</step>
   <min>-5</min>
   <max>5</max>
   <wrap>false</wrap>
  </binding>
 </action>

  <action>
   <name>coarse raise</name>
   <button>1</button>
   <x>0</x>
   <y>-62</y>
   <w>11</w>
   <h>22</h>
  <binding>
  <command>property-adjust</command>
   <property alias="../../../../params/offset-deg"/>
   <step>5</step>
   <min>-5</min>
   <max>5</max>
   <wrap>false</wrap>
  </binding>
 </action>

</actions>

</PropertyList>
