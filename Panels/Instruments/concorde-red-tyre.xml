<?xml version="1.0"?>

<!-- Alarm on tyre :


     Not supported by FDM.
-->

<PropertyList>
 <name>Alarm tyre</name>
 <w-base>104</w-base>
 <h-base>26</h-base>

 <params>
  <test>/controls/lighting/crew/captain/test</test>
  <low>/controls/lighting/crew/captain/low</low>
 </params>


 <layers>
<!-- translucent lens -->  
  <layer>
   <name>Alarm light</name>
   <type>switch</type>

   <layer>
    <name>off</name>
    <type>group</type>
    <condition>
     <or include="concorde-cond-voltage-bulb.xml">
      <not>
       <property alias="../../../../../../../params/test"/>
      </not>
     </or>
    </condition>

    <layer include="concorde-bulb-off.xml">
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background off</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-tyre.png</path>
      <x1>0.0</x1>
      <y1>0.27</y1>
      <x2>1.0</x2>
      <y2>0.73</y2>
     </texture>
     <w>104</w>
     <h>26</h>
    </layer>
   </layer>

   <layer>
    <name>on</name>
    <type>group</type>

    <layer include="concorde-bulb-on.xml">
     <condition>
      <not>
       <property alias="../../../../../../../params/low"/>
      </not>
     </condition>
     <w>104</w>
     <h>26</h>
    </layer>
    <layer>
     <name>background on</name>
     <texture>
      <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-red-tyre.png</path>
      <x1>0.0</x1>
      <y1>0.27</y1>
      <x2>1.0</x2>
      <y2>0.73</y2>
     </texture>
     <w>104</w>
     <h>26</h>
     <emissive>true</emissive>
    </layer>
   </layer>
  </layer>

 </layers>

</PropertyList>
