<?xml version="1.0"?>

<!-- Take off monitor -->

<PropertyList>
 <name>Take off monitor</name>
 <w-base>160</w-base>
 <h-base>200</h-base>


 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/Concorde/Panels/Instruments/Textures/bezel1.png</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
   <w>120</w>
   <h>120</h>
  </layer>

  <layer>
   <name>button</name>
   <type>switch</type>

   <layer>
    <name>pull</name>
    <condition>
     <not>
      <property>/instrumentation/takeoff-monitor/armed</property>
     </not>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-grey-knob.png</path>
     <x1>0.0</x1>
      <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>104</w>
    <h>104</h>
   </layer>

   <layer>
    <name>push</name>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-white-knob.png</path>
     <x1>0.0</x1>
      <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
    <w>92</w>
    <h>92</h>
   </layer>
  </layer>

<!-- labels -->

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>T/O MONITOR</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-60</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>67</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title push</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>PUSH</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-61</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-70</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title push (line 2)</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ARM</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-55</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-87</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title pull</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>PULL</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>22</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-70</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title pull (line 2)</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>INHIB</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-87</offset>
    </transformation>
   </transformations>
  </layer>
 </layers>
 
 <actions>

  <action>
   <desc>Test lights</desc>
   <button>0</button>
   <x>-48</x>
   <y>-48</y>
   <w>96</w>
   <h>96</h>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/takeoff-monitor/armed</property>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/generic/click</property>
   </binding>
  </action>

 </actions>

</PropertyList>
