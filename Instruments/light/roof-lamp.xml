<?xml version="1.0" ?> 

<PropertyList> 
 <path>roof-lamp.ac</path> 

 <animation>
  <type>material</type>
  <object-name>Lamp</object-name>
  <condition>
        <greater-than>
          <property>systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </condition>

  <emission>
   <red>1.0</red>
   <green>0.95</green>
   <blue>0.73</blue>
   <factor-prop>controls/lighting/crew/roof</factor-prop>
  </emission>
 </animation> 

</PropertyList>
