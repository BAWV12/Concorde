<!-- WAYPOINT SELECTOR -->

 <text>
  <name>waypoint number</name>
  <type type="string">number-value</type>
  <property alias="../../params/ins-waypoint"/>
  <format type="string">%1.0f</format>
  <draw-text type="bool">true</draw-text>
  <font>Helvetica.txf</font>
  <character-size type="double">0.006</character-size>
  <character-aspect-ratio type="double">1.0</character-aspect-ratio>
  <font-resolution>
   <width type="int">32</width>
   <height type="int">32</height>
  </font-resolution>
  <alignment>left-center</alignment>
  <axis-alignment>yz-plane</axis-alignment>
  <offsets>
   <pitch-deg>-90</pitch-deg>
   <x-m>-0.012</x-m>
   <y-m>-0.050</y-m>
   <z-m> 0.005</z-m>
  </offsets>
 </text>

 <animation>
  <type>pick</type>
  <object-name>WaypointSelector</object-name>
  <action>
   <button>0</button>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/ins-waypoint"/>
    <step>1</step>
    <min>1</min>
    <max>99</max>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.INSinstrument.computeexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>instrumentation/generic/click</property>
   </binding>
  </action>
  <action>
   <button>1</button>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/ins-waypoint"/>
    <step>-1</step>
    <min>1</min>
    <max>99</max>
   </binding>
   <binding>
    <command>nasal</command>
    <script>globals.Concorde.INSinstrument.computeexport();</script>
   </binding>
   <binding>
    <command>property-toggle</command>
    <property>instrumentation/generic/click</property>
   </binding>
  </action>
 </animation>

