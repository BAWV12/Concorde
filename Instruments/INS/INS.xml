<!-- SWITCH -->

 <animation>
  <type>translate</type>
  <object-name>Switch</object-name>
  <property alias="../../params/ins-switch"/>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>-0.001</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Switch</object-name>
  <offset-deg>-36</offset-deg>   
  <center>
   <x-m> 0.051</x-m>
   <y-m>-0.022</y-m>
   <z-m> 0.0</z-m>
  </center>
  <axis>
   <x> 0.0</x>
   <y> 0.0</y>
   <z>-1.0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>Switch</object-name>
  <action>
   <button>0</button>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/ins-switch"/>
    <value>true</value>
    <repeatable>true</repeatable>
   </binding>
   <mod-up>
    <binding>
     <command>property-assign</command>
     <property alias="../../../../../params/ins-switch"/>
     <value>false</value>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/instrumentation/generic/click</property>
    </binding>
   </mod-up>
  </action>
 </animation>


 <animation>
  <type>pick</type>
  <object-name>FromToIndicator</object-name>
  <action>
   <button>0</button>
   <binding>
        <command>nasal</command>
        <script>
		wptn=getprop("/autopilot/route-manager/wp/id");
		wptd=math.round(getprop("/autopilot/route-manager/wp/dist"));
		eta=getprop("/autopilot/route-manager/wp/eta");
		nwptn=getprop("/autopilot/route-manager/wp[1]/id");
		nwptd=math.round(getprop("/autopilot/route-manager/wp[1]/dist"));
		etan=getprop("/autopilot/route-manager/wp[1]/eta");
		lwptd=math.round(getprop("/autopilot/route-manager/wp-last/dist"));
		msg="Direct to waypoint "~wptn~", distance "~wptd~", ETA "~eta~", next waypoint "~nwptn~", distance "~nwptd~", ETA "~etan~", "~lwptd~" nm to destination.";
		setprop("/sim/messages/copilot", msg);
	</script>
   </binding>
  </action>
 </animation>


