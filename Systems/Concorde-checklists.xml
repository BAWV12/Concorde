    <checklists>

     <all>
      <captain>
       <message>
       <description>all checklists</description>
        <action>abort</action>
        <text>abort checklist</text>
       </message>
      </captain>
     </all>

     <aftertakeoff>
      <captain>
       <description>answer</description>
       <message>
        <action>recall</action>
        <text>recall</text>
       </message>
      </captain>
      <engineer>
       <description>checklist</description>
       <message>
        <action>recall</action>
        <text>master warning recall</text>                         <!-- captain task -->
       </message>
       <message>
        <action>completed</action>
        <text>after takeoff checklist completed</text>
       </message>
      </engineer>
     </aftertakeoff>

     <climb>
      <engineer>
       <description>checklist</description>
       <message>
        <action>completed</action>
        <text>climb checklist completed</text>
       </message>
      </engineer>
     </climb>

     <transsonic>
